<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!--当前登录用户返佣比例-->
        <variable
            name="yjbl"
            type="Float" />

<!--        <variable-->
<!--            name="activity"-->
<!--            type="com.hpkj.sheplive.activity.GoodsDetailActivity" />-->

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.SpBean" />

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        app:clickview="@{(view)->click.showGoodsDetail(view,data.item_id)}">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_recommand_pic"
            android:layout_width="107dp"
            android:layout_height="107dp"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_5"
            android:scaleType="fitXY"
            android:src="@drawable/bg_empty"
            app:imgmoren="@{@drawable/bg_empty}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/checkbox"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="5dp"
            app:riv_mutate_background="true"
            app:url="@{data.pict_url}" />


        <com.example.myapplication.view.MytextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="@dimen/dp_10"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="2dp"
            android:paddingRight="@dimen/dp_10"
            android:text='@{data.title??"",default="--"}'
            android:textColor="@color/color_333333"
            android:textSize="@dimen/txt_size_14"
            app:layout_constraintLeft_toRightOf="@id/iv_recommand_pic"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_recommand_pic" />

        <LinearLayout
            android:id="@+id/item_q_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/new_conpoun"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:visibility='@{data.coupon_amount.equals("0")?View.GONE:View.VISIBLE,default=visible}'
            app:layout_constraintLeft_toRightOf="@id/iv_recommand_pic"
            app:layout_constraintTop_toBottomOf="@id/tv_title">

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="券"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_12" />

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="¥"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_11" />

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text='@{data.coupon_amount+"",default="0"}'
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/bg_coupon_pink"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            app:layout_constraintLeft_toRightOf="@+id/item_q_linear"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            tools:ignore="MissingConstraints">

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享赚"
                android:textColor="@color/color_FF4A4D"
                android:textSize="@dimen/txt_size_12" />

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="¥"
                android:textColor="@color/color_FF4A4D"
                android:textSize="@dimen/txt_size_11" />

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{click.spbonus(data,yjbl)}'
                android:textColor="@color/color_FF4A4D"
                android:textSize="@dimen/txt_size_13"
                tools:text="0.00" />
        </LinearLayout>

        <com.example.myapplication.view.MytextView
            android:id="@+id/tv_rmb_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="¥"
            android:textColor="@color/color_FF4A4D"
            android:textSize="@dimen/txt_size_11"
            app:layout_constraintBottom_toBottomOf="@+id/iv_recommand_pic"
            app:layout_constraintLeft_toRightOf="@id/iv_recommand_pic" />

        <com.example.myapplication.view.MytextView
            android:id="@+id/sc_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:text='@{data.after_price+" ",default="0.00"}'
            android:textColor="@color/color_FF4A4D"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_rmb_symbol"
            app:layout_constraintLeft_toRightOf="@id/tv_rmb_symbol" />

        <com.example.myapplication.view.MytextView
            android:id="@+id/tv_rmb_symbol2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="¥"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/txt_size_11"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_rmb_symbol"
            app:layout_constraintLeft_toRightOf="@id/sc_price" />

        <com.example.myapplication.view.MytextView
            android:id="@+id/sc_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{data.zk_final_price+"",default="0.00"}'
            android:textColor="@color/color_999999"
            android:textSize="@dimen/txt_size_11"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_rmb_symbol"
            app:layout_constraintLeft_toRightOf="@id/tv_rmb_symbol2" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/color_999999"
            app:layout_constraintBottom_toBottomOf="@+id/sc_price2"
            app:layout_constraintLeft_toLeftOf="@+id/tv_rmb_symbol2"
            app:layout_constraintRight_toRightOf="@+id/sc_price2"
            app:layout_constraintTop_toTopOf="@+id/sc_price2"
            tools:ignore="MissingConstraints" />

        <com.example.myapplication.view.MytextView
            android:layout_width="77dp"
            android:layout_height="29dp"
            android:background="@mipmap/home_fx_btn"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>