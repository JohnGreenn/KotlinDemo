<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.ShopGoodsDetailBean.BaseInfoBean" />

        <variable
            name="priceVip"
            type="String" />

        <variable
            name="url"
            type="String" />

        <variable
            name="click"
            type="com.hpkj.sheplive.dialog.ShopOrderDialog.Builder" />

        <variable
            name="xz"
            type="String" />

        <import type="android.view.View" />

        <variable
            name="type"
            type="Integer" />

        <variable
            name="num"
            type="Integer" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingTop="12dp"
                android:paddingRight="15dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/order_img"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_empty"
                    app:imgmoren="@{@drawable/bg_empty}"
                    app:riv_corner_radius="8dp"
                    app:url="@{url}"
                    tools:ignore="MissingConstraints" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="18dp"
                    android:gravity="bottom"
                    app:layout_constraintLeft_toRightOf="@+id/order_img"
                    app:layout_constraintTop_toTopOf="@+id/order_img">

                    <com.example.myapplication.view.MytextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥"
                        android:textColor="@color/color_d81e07"
                        android:textSize="@dimen/txt_size_12" />

                    <com.example.myapplication.view.MytextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text='@{priceVip??"--",default="--"}'
                        android:textColor="@color/color_d81e07"
                        android:textSize="@dimen/txt_size_18" />
                </LinearLayout>

                <com.example.myapplication.view.MytextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="50dp"
                    android:lineSpacingMultiplier="1.3"
                    android:text='@{xz==null||xz.equalsIgnoreCase("")?"请选择 商品规格":"已选："+xz??"",default="请选择 商品规格"}'
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/txt_size_12"
                    app:layout_constraintLeft_toRightOf="@+id/order_img"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/order_img" />

                <ImageView
                    android:id="@+id/oder_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingLeft="3dp"
                    android:paddingTop="7dp"
                    android:paddingRight="3dp"
                    android:paddingBottom="7dp"
                    android:src="@mipmap/dialog_close"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/type_xml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp">


                    <com.example.myapplication.view.MytextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="购买数量"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/txt_size_13" />

                    <Button
                        android:id="@+id/but_del"
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:background="@drawable/but_bg_left"
                        android:text="—"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/txt_size_18" />

                    <com.example.myapplication.view.MytextView
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:background="@drawable/but_bg_center"
                        android:gravity="center"
                        android:text='@{num+"",default="1"}'
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/txt_size_15" />

                    <Button
                        android:id="@+id/but_add"
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:background="@drawable/but_bg_right"
                        android:text="+"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/txt_size_18" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginBottom="38dp"
                    android:background="@color/color_FF4A4D" />


            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="@{type==1?View.GONE:View.VISIBLE}">

                <Button
                    android:id="@+id/add_gwc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/color_FF9024"
                    android:text="加入购物车"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_15"
                    app:clickview="@{(view)->click.onClick(view)}" />

                <Button
                    android:id="@+id/order_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/color_FF4A4D"
                    android:text="立即购买"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_15"
                    app:clickview="@{(view)->click.onClick(view)}" />


            </LinearLayout>

            <Button
                android:id="@+id/but_gm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_FF4A4D"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_15"
                android:visibility="@{type==0?View.GONE:View.VISIBLE}"
                app:clickview="@{(view)->click.onClick(view)}" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>