<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_teacher"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/my_teacher_bg">
    
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/avater"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@mipmap/teacher_ico"
        app:riv_corner_radius="360dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_30"
        android:scaleType="fitXY"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_343434"
        android:textSize="@dimen/txt_size_14"
        android:text="Hi,煜妈妈"
        android:layout_below="@+id/avater"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_6"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:text="我是你的专属导师-煜妈妈，将一对一带你玩转奢品堂，把所有关于奢品堂的省钱赚钱秘籍都传授给你，让你尽快成长哦！快来加我的微信：zzt2019666"
        android:textSize="@dimen/txt_size_13"
        android:textColor="@color/color_343434"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_below="@+id/tv_nickname"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_click1"
        android:layout_width="@dimen/dp_90"
        android:layout_height="32dp"
        android:text="我已添加"
        android:gravity="center"
        android:background="@drawable/border_red_16radius"
        android:textSize="@dimen/txt_size_14"
        android:layout_below="@+id/tv_desc"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="23dp"
        android:textColor="@color/color_FF4A4E"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_click2"
        android:layout_width="@dimen/dp_90"
        android:layout_height="32dp"
        android:text="复制微信号"
        android:gravity="center"
        android:background="@drawable/bg_red_15radius"
        android:textSize="@dimen/txt_size_14"
        android:layout_below="@+id/tv_desc"
        android:layout_marginRight="67dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="23dp"
        android:textColor="@color/white"/>

</RelativeLayout>