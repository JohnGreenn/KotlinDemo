<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activity"
            type="com.hpkj.sheplive.activity.MyFavoriteActivity" />

        <variable
            name="positon"
            type="Integer" />

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.MyFavoriteBean.ListBean" />

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_myfavorite_pic"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_empty"
            app:riv_corner_radius="10dp"
            app:riv_mutate_background="true"
            android:layout_marginLeft="@dimen/dp_14"
            app:layout_constraintLeft_toRightOf="@+id/checkbox"
            tools:ignore="MissingConstraints" />


        <com.example.myapplication.view.MytextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text='@{data.title??"",default="--"}'
            android:textColor="@color/color_343434"
            android:textSize="@dimen/txt_size_13"
            app:layout_constraintLeft_toRightOf="@id/iv_myfavorite_pic"
            app:layout_constraintTop_toTopOf="@id/iv_myfavorite_pic" />

        <com.example.myapplication.view.MytextView
            android:id="@+id/sc_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="6dp"
            android:text='@{data.marketprice==null?"-.--":data.marketprice,default="0.00"}'
            android:textColor="@color/color_e0b777"
            android:drawableLeft="@mipmap/vip"
            android:drawablePadding="3dp"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toBottomOf="@id/iv_myfavorite_pic"
            app:layout_constraintLeft_toRightOf="@id/iv_myfavorite_pic" />

        <com.example.myapplication.view.MytextView
            android:id="@+id/sc_costprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="6dp"
            android:text='@{data.productprice==null?"¥-.--":"¥"+data.productprice,default="¥0.00"}'
            android:textColor="@color/color_666666"
            android:textSize="@dimen/txt_size_10"
            app:layout_constraintBaseline_toBaselineOf="@id/sc_price"
            app:layout_constraintLeft_toRightOf="@id/sc_price" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>