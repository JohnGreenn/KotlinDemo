<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />

        <variable
            name="activity"
            type="com.hpkj.sheplive.activity.FindPassActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_EAE8E8"
        android:orientation="vertical">

        <com.hjq.bar.TitleBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_top_height"
            app:lineVisible="false"
            app:title="修改密码" />

        <View
            style="@style/HorizontalLineStyle"
            android:layout_gravity="bottom" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingTop="3dp">

            <com.hjq.widget.view.ClearEditText
                android:id="@+id/et_loginphone"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="输入手机号"
                android:inputType="textVisiblePassword"
                android:singleLine="true"
                app:regexType="mobile" />

            <View
                style="@style/HorizontalLineStyle"
                android:layout_gravity="bottom" />

            <LinearLayout
                android:id="@+id/ll_register_edit1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.hjq.widget.view.RegexEditText
                        android:id="@+id/et_logincode"
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:hint="输入验证码"
                        android:inputType="number"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:singleLine="true" />

                    <View
                        style="@style/HorizontalLineStyle"
                        android:layout_gravity="bottom" />
                </FrameLayout>

                <com.hjq.widget.view.CountdownView
                    android:id="@+id/cv_register_countdown1"
                    style="@style/CountdownViewStyle"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/yzm_but"
                    android:text="获取验证码"
                    android:textColor="@color/color_FF4A4D"
                    app:clickview="@{(view)->activity.onClick(view)}" />

            </LinearLayout>

            <com.hjq.widget.view.PasswordEditText
                android:id="@+id/et_find_password"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="输入密码（6-18个字符之间）"
                android:maxLength="18"
                android:maxLines="1" />

            <View style="@style/HorizontalLineStyle" />

            <com.hjq.widget.view.PasswordEditText
                android:id="@+id/et_register_password2"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请再次输入密码（6-18个字符之间）"
                android:maxLength="20"
                android:maxLines="1" />

            <View style="@style/HorizontalLineStyle" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/btn_red_20radius"
            android:text="@string/common_confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_15"
            app:clickview="@{(view)->activity.onClick(view)}" />

    </LinearLayout>
</layout>