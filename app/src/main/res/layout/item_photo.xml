<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:descendantFocusability="blocksDescendants">

    <data>

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.ImageListBeanX" />
    </data>

    <com.hjq.widget.square.SquareFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_4radius_999999"
        android:padding="1dp"
        tools:context=".adapter.PhotoAdapter">

        <com.hjq.widget.view.ScaleImageView
            android:id="@+id/iv_photo_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_logo"
            app:imgmoren="@{@drawable/ic_logo}"
            app:url="@{data.url}"
            tools:ignore="MissingConstraints" />

        <FrameLayout
            android:id="@+id/fl_photo_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingLeft="20dp"
            android:paddingTop="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/iv_photo_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@drawable/selector_checkbox"
                android:focusableInTouchMode="false"
                android:padding="5dp"
                android:src="@{data.ischeck?@drawable/radio_select:@drawable/radio_no,default=@drawable/radio_no}"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />
        </FrameLayout>

    </com.hjq.widget.square.SquareFrameLayout>
</layout>