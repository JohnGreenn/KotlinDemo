<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="com.hpkj.sheplive.activity.HuoDongActivity" />

        <variable
            name="title"
            type="String" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.HuoDongActivity">

        <com.hjq.bar.TitleBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_top_height" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/huo_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <com.example.myapplication.view.MytextView
                    android:id="@+id/iv_goods_buy"
                    style="@style/blackTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_weight="1"
                    android:background="@drawable/btn_red"
                    android:gravity="center"
                    android:text="立即购买"
                    android:textColor="@color/white"
                    app:clickview="@{(view)->activity.onClick(view)}" />

                <com.example.myapplication.view.MytextView
                    android:id="@+id/iv_goods_share"
                    style="@style/blackTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_weight="1"
                    android:background="@drawable/btn_red"
                    android:gravity="center"
                    android:text="复制口令"
                    android:textColor="@color/white"
                    app:clickview="@{(view)->activity.onClick(view)}" />

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</layout>