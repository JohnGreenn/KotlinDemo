<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.AddressDetailBean" />

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_address1"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@drawable/bg_shadow"
            app:clickview="@{(view)->click.enterMyAddress(view,1,false,true)}">

            <com.example.myapplication.view.MytextView
                android:id="@+id/tv_pay_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size_15"
                android:text='@{data.name,default="--"}'
                app:layout_constraintLeft_toRightOf="@+id/iv_pay_weizhi"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                android:textColor="@color/color_333333" />

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size_12"
                android:text='@{data.mobile,default="--"}'
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_pay_name"
                app:layout_constraintLeft_toRightOf="@+id/tv_pay_name"
                android:layout_marginLeft="5dp"
                android:textColor="@color/color_7D7D7D" />

            <ImageView
                android:id="@+id/iv_pay_weizhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_22"
                app:layout_constraintTop_toBottomOf="@+id/tv_pay_name"
                android:src="@mipmap/address_red"
                android:contentDescription="TODO" />

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{data.province+data.city+data.district+data.addr,default="--"}'
                android:textSize="@dimen/txt_size_11"
                android:textColor="@color/color_333333"
                android:layout_marginTop="@dimen/dp_16"
                app:layout_constraintTop_toBottomOf="@+id/tv_pay_name"
                app:layout_constraintLeft_toRightOf="@+id/iv_pay_weizhi"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="32dp"
                android:maxLines="2" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:src="@mipmap/goods_enter"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="@dimen/dp_12" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_address2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@drawable/bg_shadow"
            app:clickview="@{(view)->click.enterMyAddress(view,1,false,true)}">

            <ImageView
                android:id="@+id/iv_pay_weizhi2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/dp_22"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@mipmap/address_red"
                android:contentDescription="TODO" />

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请先添加地址"
                android:textSize="@dimen/txt_size_13"
                android:textColor="@color/color_333333"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/ib_enter"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="10dp"
                android:maxLines="2" />

            <ImageButton
                android:id="@+id/ib_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:src="@mipmap/goods_enter"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="@dimen/dp_12" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
</layout>