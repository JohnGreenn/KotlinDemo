<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activity"
            type="com.hpkj.sheplive.activity.GwcActivity" />

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />

        <import type="android.view.View" />

        <variable
            name="positon"
            type="Integer" />

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.GwcGoodsListBean2.GoodsListBean" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_12">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.myapplication.view.MytextView
                android:id="@+id/checkbox"
                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="10dp"
                android:background="@{data.ischecked?@drawable/xuanzhong:@drawable/weixuanzhong,default=@drawable/weixuanz}"
                app:clickview="@{(view)->activity.onClick(view,data)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/goods_img"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="@dimen/dp_8"
                android:src="@drawable/bg_empty"
                app:imgmoren="@{@drawable/bg_empty}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:url="@{data.resUrl}" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/goods_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="38dp"
                android:maxLines="2"
                android:minLines="2"
                android:text='@{data.goodName,default="--"}'
                android:textColor="@color/color_333333"
                android:textSize="@dimen/txt_size_10"
                app:layout_constraintLeft_toRightOf="@+id/goods_img"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/ll_guige"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="38dp"
                android:visibility='@{data.skuName==null||data.skuName.equalsIgnoreCase("")?View.INVISIBLE:View.VISIBLE,default=visible}'
                app:layout_constraintLeft_toRightOf="@+id/goods_img"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/goods_title">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text='@{data.skuName,default="--"}'
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/txt_size_10"
                    app:layout_constraintLeft_toRightOf="@+id/goods_img"
                    app:layout_constraintTop_toBottomOf="@+id/goods_title" />

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_70"
                android:layout_marginBottom="@dimen/dp_17"
                android:text='@{"Â¥"+data.priceVip+"",default="--"}'
                android:textColor="@color/color_d81e07"
                android:textSize="@dimen/txt_size_10"
                app:layout_constraintRight_toLeftOf="@+id/view_number"
                app:layout_constraintTop_toBottomOf="@+id/ll_guige" />

            <LinearLayout
                android:id="@+id/view_number"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="38dp"
                android:layout_marginBottom="@dimen/dp_12"
                android:background="@drawable/shape_cart_item_add_cut_border"
                android:divider="@drawable/shape_divider_1_v"
                android:orientation="horizontal"
                android:showDividers="middle"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_guige">

                <com.example.myapplication.view.MytextView
                    android:id="@+id/tv_reduce"
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/color_676767"
                    android:textSize="@dimen/txt_size_10"
                    app:clickview="@{(view)->activity.onClick(view,data)}" />


                <EditText
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:minWidth="20dp"
                    android:numeric="integer"
                    android:singleLine="true"
                    android:text='@={data.count+"",default="1"}'
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/txt_size_10"
                    app:clickview="@{(view)->activity.onClick(view,data)}" />


                <com.example.myapplication.view.MytextView
                    android:id="@+id/tv_add"
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/color_676767"
                    android:textSize="@dimen/txt_size_10"
                    app:clickview="@{(view)->activity.onClick(view,data)}" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>