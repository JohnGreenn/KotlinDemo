<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activity"
            type="com.hpkj.sheplive.activity.SearchResultsActivity" />

        <variable
            name="click"
            type="com.hpkj.sheplive.activity.SearchResultsActivity" />

        <variable
            name="flg"
            type="Integer" />

        <import type="android.view.View" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_top_height"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:padding="10dp"
                android:src="@mipmap/ico_left_g"
                app:clickview="@{(view)->click.clickExit(view)}"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/sertch_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/search_bg_red_15radius"
                    android:drawableLeft="@mipmap/search_small2"
                    android:drawablePadding="6dp"
                    android:ellipsize="end"
                    android:hint="请输入商品名称"
                    android:imeOptions="actionSearch"
                    android:paddingLeft="9dp"
                    android:paddingTop="1dp"
                    android:paddingRight="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_B2B2B2"
                    android:textSize="@dimen/txt_size_12" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/ser_bu_bg"
                    android:gravity="center"
                    android:paddingLeft="13dp"
                    android:paddingRight="16dp"
                    android:text="搜索"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_12"
                    app:clickview="@{(view)->click.clicSearch(view)}"
                    app:layout_constraintRight_toRightOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="left|center">

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_12"
                android:gravity="center_vertical"
                android:text="搜索渠道"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/txt_size_12" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">

                <!--商城-->
                <LinearLayout
                    android:id="@+id/ll_sc"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_22"
                    android:orientation="vertical">

                    <com.example.myapplication.view.MytextView
                        android:id="@+id/radio_sc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_17"
                        android:background="@null"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="商城"
                        android:textColor='@{flg==2?@color/color_FF4A4D:@color/color_333333,default=@color/color_333333}'
                        app:clickview="@{(view)->click.onClick(view)}" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_6"
                        android:src="@mipmap/red_rect"
                        android:visibility='@{flg==2?View.VISIBLE:View.INVISIBLE,default=visible}' />

                </LinearLayout>

                <!--淘宝-->
                <LinearLayout
                    android:id="@+id/ll_tb"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.example.myapplication.view.MytextView
                        android:id="@+id/radio_tabao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_17"
                        android:background="@null"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="淘宝"
                        android:textColor='@{flg==0?@color/color_FF4A4D:@color/color_333333,default=@color/color_333333}'
                        app:clickview="@{(view)->click.onClick(view)}" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_6"
                        android:src="@mipmap/red_rect"
                        android:visibility='@{flg==0?View.VISIBLE:View.INVISIBLE,default=visible}' />

                </LinearLayout>
                <!--京东-->
                <LinearLayout
                    android:id="@+id/ll_jd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:orientation="vertical">

                    <com.example.myapplication.view.MytextView
                        android:id="@+id/radio_jd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_17"
                        android:background="@null"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="京东"
                        android:textColor='@{flg==1?@color/color_FF4A4D:@color/color_333333,default=@color/color_333333}'
                        app:clickview="@{(view)->click.onClick(view)}" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_6"
                        android:src="@mipmap/red_rect"
                        android:visibility='@{flg==1?View.VISIBLE:View.INVISIBLE,default=visible}' />

                </LinearLayout>
                <!--拼多多-->
                <LinearLayout
                    android:id="@+id/ll_pdd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:orientation="vertical">

                    <com.example.myapplication.view.MytextView
                        android:id="@+id/radio_pdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_17"
                        android:background="@null"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="拼多多"
                        android:textColor='@{flg==3?@color/color_FF4A4D:@color/color_333333,default=@color/color_333333}'
                        app:clickview="@{(view)->click.onClick(view)}" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_6"
                        android:src="@mipmap/red_rect"
                        android:visibility='@{flg==3?View.VISIBLE:View.INVISIBLE,default=visible}' />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/color_f2f2f2" />

        <com.hjq.widget.layout.NoScrollViewPager
            android:id="@+id/goodslistviewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</layout>