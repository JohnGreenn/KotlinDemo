<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="com.hpkj.sheplive.activity.JdShareActivity" />

        <import type="android.view.View" />

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.SpBean" />

        <variable
            name="share"
            type="com.hpkj.sheplive.entity.JdShareBean" />

        <variable
            name="tgfy"
            type="Float" />

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />

        <variable
            name="checkhb"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.JdShareActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <com.hjq.bar.TitleBar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_top_height"
                app:title="创建分享"
                tools:ignore="MissingConstraints" />


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_gradient2"
                android:scrollbars="none"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginLeft="17.5dp"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginRight="17.5dp"
                        android:background="@drawable/bg_shadow_4radius"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:drawableLeft="@mipmap/hai_sy2" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:text="收益预估:"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/txt_size_15" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:text="¥"
                            android:textColor="@color/color_FF4A4D"
                            android:textSize="@dimen/txt_size_15" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_ygsy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:text='@{click.spbonus(data,tgfy),default="-"}'
                            android:textColor="@color/color_FF4A4D"
                            android:textSize="@dimen/txt_size_15" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_wenan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17.5dp"
                        android:layout_marginTop="@dimen/dp_7"
                        android:layout_marginRight="17.5dp"
                        android:background="@drawable/bg_shadow_4radius"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_goodsname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginTop="18.5dp"
                            android:layout_marginRight="@dimen/dp_15"
                            android:ellipsize="end"
                            android:lineSpacingMultiplier="1.3"
                            android:maxLines="2"
                            android:text='@{data.title}'
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_14"
                            tools:text="商品名称" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_yuanjia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginTop="6dp"
                            android:text='@{"【原价】"+data.zk_final_price+"元"}'
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/txt_size_13"
                            tools:text="【原价】 --元" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_quanhoujia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:text='@{"【券后价】"+click.spqhj(data)+"元"}'
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/txt_size_13"
                            tools:text="【券后价】 --元" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_site"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:layout_marginBottom="@dimen/dp_10"
                                android:layout_weight="1"
                                android:lineSpacingExtra="4dp"
                                android:minLines="2"
                                android:text='@{"【商品链接】 "+share.shortURL}'
                                android:textColor="@color/color_666666"
                                android:textSize="@dimen/txt_size_13"
                                tools:text="【商品链接】 --" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/only_link"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_10"
                                android:layout_marginBottom="@dimen/dp_15"
                                android:background="@drawable/hai_txt_back2"
                                android:drawableLeft="@mipmap/hai_copy2"
                                android:padding="5dp"
                                android:paddingRight="@dimen/dp_5"
                                android:text="  仅复制链接"
                                android:textColor="@color/white"
                                android:textSize="@dimen/txt_size_10"
                                app:clickview="@{(view)->activity.onClick(view)}" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="17.5dp"
                        android:layout_marginTop="@dimen/dp_7"
                        android:layout_marginRight="17.5dp"
                        android:background="@drawable/bg_shadow_4radius"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:paddingLeft="15dp"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="29dp">


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/cons_haibao"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@color/white">

                                <FrameLayout
                                    android:id="@+id/frame_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <com.makeramen.roundedimageview.RoundedImageView
                                        android:id="@+id/haibao_img"
                                        android:layout_width="match_parent"
                                        android:layout_height="158dp"
                                        android:padding="1dp"
                                        android:scaleType="fitXY"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:riv_corner_radius_top_left="@dimen/dp_4"
                                        app:riv_corner_radius_top_right="4dp"
                                        app:url="@{data.pict_url}" />

                                    <ImageView
                                        android:id="@+id/iv_photo_check"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="right"
                                        android:background="@null"
                                        android:padding="6dp"
                                        android:src="@{checkhb?@drawable/radio_select:@drawable/radio_no,default=@drawable/radio_no}"
                                        app:clickview="@{(view)->activity.onClick(view)}"
                                        app:layout_constraintRight_toRightOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                </FrameLayout>

                                <LinearLayout
                                    android:id="@+id/haibao_pic"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/frame_layout">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/haibao_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="3dp"
                                        android:layout_marginRight="@dimen/dp_10"
                                        android:ellipsize="end"
                                        android:maxLines="2"
                                        android:text="@{data.title}"
                                        android:textColor="@color/color_333333"
                                        android:textSize="@dimen/txt_size_8"
                                        tools:text="商品名称商品名称商品名称商品名称" />

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tv_txt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/dp_10"
                                            android:layout_marginTop="@dimen/dp_6"
                                            android:text="券后价¥"
                                            android:textColor="@color/color_FF4A4D"
                                            android:textSize="@dimen/txt_size_6"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintLeft_toLeftOf="parent"
                                            tools:ignore="MissingConstraints" />

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tv_txt2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4.5dp"
                                            android:gravity="bottom"
                                            android:includeFontPadding="false"
                                            android:text='@{click.spqhj(data)}'
                                            android:textColor="@color/color_FF4A4D"
                                            android:textSize="@dimen/txt_size_9"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintLeft_toRightOf="@+id/tv_txt"
                                            tools:text="--" />

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/haibao_yuanjia"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="1dp"
                                            android:layout_marginTop="@dimen/dp_10"
                                            android:layout_toRightOf="@+id/tv_txt2"
                                            android:gravity="bottom"
                                            android:includeFontPadding="false"
                                            android:text='@{"¥"+data.zk_final_price+"元"}'
                                            android:textColor="@color/color_999999"
                                            android:textSize="5.5sp"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintLeft_toRightOf="@+id/tv_txt2"
                                            tools:text="¥29.89" />

                                        <View
                                            android:layout_width="0dp"
                                            android:layout_height="1px"
                                            android:background="@color/color_cccccc"
                                            app:layout_constraintBottom_toBottomOf="@+id/haibao_yuanjia"
                                            app:layout_constraintLeft_toLeftOf="@+id/haibao_yuanjia"
                                            app:layout_constraintRight_toRightOf="@+id/haibao_yuanjia"
                                            app:layout_constraintTop_toTopOf="@+id/haibao_yuanjia" />

                                    </androidx.constraintlayout.widget.ConstraintLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <LinearLayout
                                            android:id="@+id/ll_haibao_quan"
                                            android:layout_width="@dimen/dp_50"
                                            android:layout_height="@dimen/dp_15"
                                            android:layout_marginLeft="@dimen/dp_10"
                                            android:layout_marginTop="@dimen/dp_10"
                                            android:background="@mipmap/share_bg_coupon"
                                            android:orientation="horizontal"
                                            android:visibility="@{click.couponshow(data)?View.VISIBLE:View.GONE,default=visible}">

                                            <com.example.myapplication.view.MytextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:layout_marginLeft="5dp"
                                                android:text="券"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/txt_size_6" />

                                            <com.example.myapplication.view.MytextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="8dp"
                                                android:layout_marginTop="4dp"
                                                android:text="¥"
                                                android:textColor="@color/white"
                                                android:textSize="5sp" />

                                            <com.example.myapplication.view.MytextView
                                                android:id="@+id/haibao_quan"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:layout_marginLeft="1dp"
                                                android:text='@{click.couponamount(data),default="-"}'
                                                android:textColor="@color/white"
                                                android:textSize="6.5sp" />

                                        </LinearLayout>

                                        <ImageView
                                            android:id="@+id/haibao_codeimg"
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerVertical="true"
                                            android:layout_marginRight="@dimen/dp_10"
                                            android:src="@drawable/bg_empty"
                                            />
<!--                                        app:url="@{share.shortURL}"-->

                                        <com.example.myapplication.view.MytextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/haibao_codeimg"
                                            android:layout_alignParentRight="true"
                                            android:layout_marginTop="@dimen/dp_10"
                                            android:layout_marginRight="17dp"
                                            android:text="扫码识别"
                                            android:textColor="@color/color_666666"
                                            android:textSize="5.5sp" />

                                    </RelativeLayout>

                                </LinearLayout>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <com.github.jdsjlzx.recyclerview.LRecyclerView
                                android:id="@+id/rv_photo_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="@dimen/dp_10" />

                            <include
                                android:id="@+id/haibao_include"
                                layout="@layout/jd_haibao" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_5" />

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/color_f4f1f4"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">

                <com.example.myapplication.view.MytextView
                    android:id="@+id/jd_share_wenan"
                    style="@style/blackTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@mipmap/btn_share_bg"
                    android:gravity="center"
                    android:text="复制文案"
                    android:textColor="@color/white"
                    app:clickview="@{(view)->activity.onClick(view)}" />

                <com.example.myapplication.view.MytextView
                    android:id="@+id/show_but_xml"
                    style="@style/blackTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@mipmap/btn_buy_bg"
                    android:gravity="center"
                    android:text="分享图片"
                    android:textColor="@color/white"
                    app:clickview="@{(view)->activity.onClick(view)}" />

            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>