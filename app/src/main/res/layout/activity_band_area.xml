<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activity"
            type="com.hpkj.sheplive.base.BaseActivity" />

        <import type="android.view.View" />

        <variable
            name="sel"
            type="Integer" />

        <variable
            name="up"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f2f2f2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/special_bg_top"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:padding="13dp"
            android:src="@mipmap/back_white"
            app:clickview="@{(view)->activity.exitActivity()}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_16"
            android:text="标题标题"
            app:layout_constraintLeft_toRightOf="@+id/img_back"
            app:layout_constraintTop_toTopOf="@+id/img_back"
            app:layout_constraintBottom_toBottomOf="@+id/img_back"/>


        <com.github.jdsjlzx.recyclerview.LRecyclerView
            android:id="@+id/lv_goodslist"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/img_back"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <include
            android:id="@+id/empty_view"
            layout="@layout/not_data_xml"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/lv_goodslist"
            app:layout_constraintTop_toTopOf="@+id/lv_goodslist" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:outlineAmbientShadowColor="@color/white"
            android:scaleType="center"
            android:src="@mipmap/new_zzz"
            app:backgroundTint="@color/white"
            app:fabCustomSize="35dp"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:maxImageSize="35dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
