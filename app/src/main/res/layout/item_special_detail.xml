        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_live_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="7dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxEms="8"
            android:singleLine="true"
            android:text='@{data.showSalesVolume+"人已买",default="-人已买"}'
            android:textColor="@color/color_999999"
            android:textSize="@dimen/txt_size_12"
            app:layout_constraintLeft_toRightOf="@+id/item_img"
            app:layout_constraintTop_toBottomOf="@+id/ll_show" />

        <com.example.myapplication.view.MytextView
            android:id="@id/txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:text="¥"
            android:textColor="@color/color_FF4A4D"
            android:textSize="@dimen/txt_size_11"
            android:layout_marginBottom="@dimen/dp_5"
            app:layout_constraintBottom_toBottomOf="@+id/item_img"
            app:layout_constraintLeft_toRightOf="@+id/item_img" />

        <com.example.myapplication.view.MytextView
            android:id="@id/txt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{data.priceVip+""}'
            android:textColor="@color/color_FF4A4D"
            android:textSize="@dimen/txt_size_16"
            app:layout_constraintBaseline_toBaselineOf="@id/txt_1"
            app:layout_constraintLeft_toRightOf="@id/txt_1"
            tools:text="0.00" />

        <com.example.myapplication.view.MytextView
            android:id="@id/txt_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="8dp"
            android:text=""
            android:textColor="@color/color_999999"
            android:textSize="@dimen/txt_size_11"
            app:layout_constraintBaseline_toBaselineOf="@id/txt_1"
            app:layout_constraintLeft_toRightOf="@id/txt_2" />

        <com.example.myapplication.view.MytextView
            android:id="@id/txt_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{"¥"+data.price+""}'
            android:textColor="@color/color_999999"
            android:textSize="@dimen/txt_size_11"
            app:layout_constraintBaseline_toBaselineOf="@id/txt_1"
            app:layout_constraintLeft_toRightOf="@id/txt_3"
            tools:text="¥0.00" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/color_999999"
            app:layout_constraintBottom_toBottomOf="@id/txt_4"
            app:layout_constraintLeft_toLeftOf="@id/txt_3"
            app:layout_constraintRight_toRightOf="@id/txt_4"
            app:layout_constraintTop_toTopOf="@id/txt_4"
            tools:ignore="MissingConstraints,NotSibling" />


        <TextView
            android:id="@+id/tv_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:background="@mipmap/home_fx_btn"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

