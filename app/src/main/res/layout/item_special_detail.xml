<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.hpkj.sheplive.utils.ClickUtil" />

        <variable
            name="click"
            type="ClickUtil" />

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.ShopGoodsListBean" />

        <import type="android.text.Html" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/homefx_frame_10radius"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        app:clickview="@{(view)->click.showShopGoodsDetail(view,data.id)}">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_img"
            android:layout_width="107dp"
            android:layout_height="107dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_empty"
            app:imgmoren="@{@drawable/bg_empty}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="@dimen/dp_5"
            app:url="@{data.resUrl}" />


        <com.example.myapplication.view.MytextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:minLines="2"
            android:text='@{data.goodName==null?"":data.goodName}'
            android:textColor="@color/color_010101"
            android:textSize="@dimen/txt_size_14"
            app:layout_constraintLeft_toRightOf="@+id/item_img"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_img"
            tools:text="--" />

        <LinearLayout
            android:id="@+id/ll_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility='@{data.showShareAndCredit?View.VISIBLE:View.GONE,default=visible}'
            app:layout_constraintLeft_toRightOf="@+id/item_img"
            app:layout_constraintTop_toBottomOf="@+id/tv_title">

            <!-- 积分抵-->
            <LinearLayout
                android:id="@+id/item_q_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_red_1radius"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp">

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分抵"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_12" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:text="¥"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_11" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text='@{data.creditPrice+""}'
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_13"
                    tools:text="0.00" />
            </LinearLayout>

            <!--分享赚-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:background="@drawable/bg_coupon_pink"
                android:gravity="bottom"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                tools:ignore="MissingConstraints">

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="赚"
                    android:textColor="@color/color_FF4A4D"
                    android:textSize="@dimen/txt_size_12" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="¥"
                    android:textColor="@color/color_FF4A4D"
                    android:textSize="@dimen/txt_size_11" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{data.sharePrice+""}'
                    android:textColor="@color/color_FF4A4D"
                    android:textSize="@dimen/txt_size_13"
                    tools:text="0.00" />
            </LinearLayout>

        </LinearLayout>
