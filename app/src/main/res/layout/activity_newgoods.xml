<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />

        <variable
            name="activity"
            type="com.hpkj.sheplive.activity.NewgoodsActivity" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/color_f2f2f2"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="187dp"
            android:background="@mipmap/special_bg_top"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@id/img_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/transparent"
            android:src="@mipmap/back_white"
            app:clickview="@{(view)->activity.clickExit(view)}"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新品上市"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_16"
            app:layout_constraintBottom_toBottomOf="@id/img_1"
            app:layout_constraintLeft_toRightOf="@+id/img_1"
            app:layout_constraintTop_toTopOf="@id/img_1" />

        <com.github.jdsjlzx.recyclerview.LRecyclerView
            android:id="@+id/lv_goodslist"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_1" />

        <include
            android:id="@+id/empty_view"
            layout="@layout/not_data_xml"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/lv_goodslist"
            app:layout_constraintTop_toTopOf="@+id/lv_goodslist" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:outlineAmbientShadowColor="@color/white"
            android:scaleType="center"
            android:src="@mipmap/new_zzz"
            app:backgroundTint="@color/white"
            app:fabCustomSize="35dp"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:maxImageSize="35dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>