<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.ShopOrderListBean" />

        <variable
            name="data2"
            type="com.hpkj.sheplive.entity.ShopOrderListBean.OrderDetailBean" />

        <variable
            name="activity"
            type="com.hpkj.sheplive.activity.ShopCommentsMultiPushActivity" />

        <variable
            name="position"
            type="Integer" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".activity.ShopCommentsPushActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_18"
                android:src="@drawable/bg_empty"
                url='@{data2.goodsImage}' />

            <com.example.myapplication.view.MytextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{data2.goodsName,default="--"}'
                android:textSize="@dimen/txt_size_12"
                android:textColor="@color/color_333333"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@+id/iv_img"
                android:ellipsize="end"
                android:lines="1" />

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_555555"
                android:textSize="@dimen/txt_size_12"
                android:layout_below="@+id/txt_title"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@+id/iv_img"
                android:layout_marginTop="@dimen/dp_10"
                android:text='@{data2.skuDesc,default="--"}' />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            style="@style/new_line" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_marginBottom="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_weight="1"
                android:id="@+id/radio_one"
                style="@style/radiobtncommentnew"
                android:text="好评"
                android:tag="1"
                android:paddingLeft="@dimen/dp_10"
                android:drawableLeft="@drawable/haoping_big"
                android:layout_marginRight="@dimen/dp_20"
                android:checked="true" />

            <RadioButton
                android:layout_weight="1"
                android:tag="2"
                android:id="@+id/radio_two"
                style="@style/radiobtncommentnew"
                android:layout_width="@dimen/dp_100"
                android:height="@dimen/dp_40"
                android:paddingLeft="@dimen/dp_10"
                android:drawableLeft="@mipmap/zhongpin_big"
                android:layout_marginRight="@dimen/dp_20"
                android:text="中评" />

            <RadioButton
                android:tag="3"
                android:layout_weight="1"
                android:id="@+id/radio_three"
                style="@style/radiobtncommentnew"
                android:layout_width="@dimen/dp_100"
                android:height="@dimen/dp_40"
                android:paddingLeft="@dimen/dp_10"
                android:drawableLeft="@mipmap/chaping_big"
                android:layout_marginRight="@dimen/dp_10"
                android:text="差评" />

        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            style="@style/new_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.myapplication.view.MytextView
                android:id="@+id/comment_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="描述相符"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/txt_size_12"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_18" />

            <RatingBar
                android:id="@+id/comment_star"
                style="@style/foodRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="5"
                android:stepSize="1.0"
                android:layout_toRightOf="@+id/comment_txt1"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginLeft="13dp" />

        </RelativeLayout>

        <EditText
            android:id="@+id/et_comments_content"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:hint="请输入你对宝贝的评价"
            android:background="@null"
            android:gravity="top"
            android:textSize="@dimen/txt_size_15"
            android:text='@={data2.commentcontent,default=""}'
            android:textColor="@color/color_999999"
            android:padding="@dimen/dp_15" />


    </LinearLayout>
</layout>