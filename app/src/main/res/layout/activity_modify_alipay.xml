<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activity"
            type="com.hpkj.sheplive.activity.ModifyAlipayActivity" />

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.hjq.bar.TitleBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_top_height"
            app:title="修改支付宝" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">

            <com.example.myapplication.view.MytextView
                style="@style/applymoneytxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="真实姓名:   " />

            <com.hjq.widget.view.ClearEditText
                android:id="@+id/et_realname"
                style="@style/applymoneyedittxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@null"
                android:hint="输入真实姓名"
                android:textColor="@color/color_333333" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:background="@color/color_eeeeee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">

            <com.example.myapplication.view.MytextView
                style="@style/applymoneytxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝号:   " />

            <com.hjq.widget.view.ClearEditText
                android:id="@+id/et_bankname"
                style="@style/applymoneyedittxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@null"
                android:hint="输入支付宝账号"
                android:textColor="@color/color_333333" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:background="@color/color_eeeeee" />

        <LinearLayout
            android:id="@+id/ll_register_edit1"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.example.myapplication.view.MytextView
                style="@style/applymoneytxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码:       " />

            <EditText
                android:id="@+id/et_check_code"
                style="@style/applymoneyedittxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/color_333333" />

            <com.hjq.widget.view.CountdownView
                android:id="@+id/cv_register_countdown"
                style="@style/CountdownViewStyle"
                android:layout_marginRight="@dimen/dp_16"
                android:text="获取验证码"
                app:clickview="@{(view)->activity.btnClick(view)}" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_commit"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginRight="16dp"
            android:background="@drawable/btn_red"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_18"
            app:clickview='@{(view)->activity.btnClick(view)}' />

    </LinearLayout>
</layout>