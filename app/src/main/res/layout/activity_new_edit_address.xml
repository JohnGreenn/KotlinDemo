<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.hjq.bar.TitleBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_top_height"
            app:title="新增收货地址" />


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/color_f2f2f2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_50"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/shtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="收货人    " />

            <androidx.appcompat.widget.AppCompatEditText
                style="@style/shtext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:background="@null"
                android:hint="请输入收货人姓名" />
        </LinearLayout>

        <View style="@style/new_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_50"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/shtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="手机号码" />

            <androidx.appcompat.widget.AppCompatEditText
                style="@style/shtext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:background="@null"
                android:hint="请输入手机号码" />
        </LinearLayout>

        <View style="@style/new_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_50"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/shtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="所在地区" />

            <com.example.myapplication.view.MytextView
                android:id="@+id/sb_person_data_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:background="@null"
                android:hint="请选择地区"
                android:textColor="@color/color_343434"
                android:textColorHint="@color/color_343434"
                android:textSize="@dimen/txt_size_15" />
        </LinearLayout>

        <View style="@style/new_line" />


        <com.hjq.widget.view.ClearEditText
            android:id="@+id/detail_address"
            style="@style/EditTextStyle3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="详细地址：如道路、门牌号、小区、楼栋号、单元室等" />

        <View
            style="@style/new_line"
            android:layout_height="@dimen/dp_12" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_50">

            <com.example.myapplication.view.MytextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="地址标签"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/txt_size_15" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_18"
                android:layout_toRightOf="@+id/txt1"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_one"
                    style="@style/radioaddress"
                    android:layout_marginRight="@dimen/dp_10"
                    android:checked="true"
                    android:text="家" />

                <RadioButton
                    android:id="@+id/radio_two"
                    style="@style/radioaddress"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="公司" />

                <RadioButton
                    android:id="@+id/radio_three"
                    style="@style/radioaddress"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="学校" />

                <RadioButton
                    android:id="@+id/radio_four"
                    style="@style/radioaddress"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="其他" />

            </RadioGroup>


        </RelativeLayout>

        <View style="@style/new_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_50">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="设置默认地址"
                android:textColor="@color/color_333333" />

            <com.hjq.widget.view.SwitchButton
                android:id="@+id/btn_search2"
                android:layout_width="40dp"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="15dp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_f2f2f2"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="200dp"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:layout_marginTop="27dp"
                android:background="@drawable/btn_red"
                android:text="保存"
                android:textColor="@color/white" />

        </LinearLayout>


    </LinearLayout>
</layout>