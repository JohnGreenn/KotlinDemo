<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activity"
            type="com.hpkj.sheplive.activity.UserChangeSexActivity" />

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.hjq.bar.TitleBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_top_height"
            app:title="性别" />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="@dimen/sp_16"
            app:clickview='@{(view)->activity.changeSex(view,0)}'>

            <com.example.myapplication.view.MytextView
                android:id="@+id/txt_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:textColor="@color/color_999999"
                android:text="男"
                android:textSize="@dimen/txt_size_16" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_change_sex_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/dagou" />
        </RelativeLayout>

        <View
            style="@style/h_line"
            android:layout_height="1px" />

        <RelativeLayout
            app:clickview='@{(view)->activity.changeSex(view,1)}'
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="@dimen/sp_16">

            <com.example.myapplication.view.MytextView
                android:id="@+id/txt_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:textColor="@color/color_999999"
                android:text="女"
                android:textSize="@dimen/txt_size_16" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_change_sex_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/dagou" />

        </RelativeLayout>

        <View
            style="@style/h_line"
            android:layout_height="1px" />


    </LinearLayout>
</layout>