<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.YGSYActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sy_bg">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">

                <ImageButton
                    android:id="@+id/ib_back"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:src="@drawable/ico_left"
                    android:layout_centerVertical="true"
                    />

                <com.example.myapplication.view.MytextView
                    android:id="@+id/toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_17"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="预估收益明细"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true">

                <com.example.myapplication.view.MytextView
                    android:id="@+id/tv_sy_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_size_24"
                    android:text="--"
                    android:textColor="@color/color_FDFF73"/>

                <com.example.myapplication.view.MytextView
                    android:id="@+id/tv_sy_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="@dimen/txt_size_12"
                    android:text="收益结算（元）"/>

            </LinearLayout>
        </RelativeLayout>

        <com.github.jdsjlzx.recyclerview.LRecyclerView
            android:id="@+id/lv_myygsy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white" />

        <include
            android:id="@+id/empty_view"
            layout="@layout/no_like_data"
            android:visibility="gone" />


    </LinearLayout>
</layout>