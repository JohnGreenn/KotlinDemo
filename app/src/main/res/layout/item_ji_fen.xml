<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="positon"
            type="Integer" />

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.JiFenDetailBean" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="4dp">

        <com.example.myapplication.view.MytextView
            android:id="@+id/tv_jifen_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text='@{data.changeValue>0?"+"+data.changeValue:data.changeValue+"",default="-"}'
            android:textColor="@color/color_36DEF2"
            android:textSize="@dimen/txt_size_12" />

        <com.example.myapplication.view.MytextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text='@{data.changeDesc,default="--"}'
            android:textColor="@color/color_999999"
            android:textSize="@dimen/txt_size_12" />

        <com.example.myapplication.view.MytextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text='@{data.changeTime,default="--"}'
            android:textColor="@color/color_808080"
            android:textSize="@dimen/txt_size_12" />

    </LinearLayout>
</layout>