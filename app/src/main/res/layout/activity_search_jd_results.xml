<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="com.hpkj.sheplive.activity.SearchJdResultsActivity" />

        <variable
            name="click"
            type="com.hpkj.sheplive.activity.SearchJdResultsActivity" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.SearchJdResultsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_top_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/transparent"
                android:src="@mipmap/back_grey"
                app:clickview="@{(view)->click.clickExit(view)}" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_weight="1"
                android:background="@drawable/search_frame"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/sertch_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/search_f"
                    android:drawableLeft="@mipmap/search_small2"
                    android:drawablePadding="10dp"
                    android:ellipsize="end"
                    android:hint="搜商品标题  先领券再购买"
                    android:imeOptions="actionSearch"
                    android:paddingLeft="9dp"
                    android:paddingRight="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/color_999999"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/txt_size_12"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/iv_clear_search" />

                <ImageButton
                    android:id="@+id/iv_clear_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:contentDescription="TODO"
                    android:padding="@dimen/dp_8"
                    android:src="@mipmap/ic_delete"
                    android:visibility="invisible"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:ignore="MissingConstraints" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="13dp"
                android:paddingRight="16dp"
                android:text="搜索"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/txt_size_13"
                app:clickview="@{(view)->click.clicSearch(view)}" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <com.google.android.material.appbar.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/ThemeOverlay.AppCompat.Light">

                    <!-- 搜索条件-->
                    <LinearLayout
                        android:id="@+id/sertch_lin"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:id="@+id/ll_paixu"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:orientation="horizontal"
                                app:clickview="@{(view)->activity.btnSearchClick(view)}">


                                <com.example.myapplication.view.MytextView
                                    android:id="@+id/btn_search0"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/dp_12"
                                    android:text="默认"
                                    android:textColor="@color/color_555555"
                                    android:textSize="@dimen/sp_14" />

                                <ImageView
                                    android:id="@+id/iv_arrow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:contentDescription="TODO"
                                    android:src="@mipmap/arrow_down"
                                    android:visibility="gone" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_xiaoliang"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_toRightOf="@+id/ll_paixu"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:orientation="horizontal"
                                android:tag="0"
                                app:clickview="@{(view)->activity.btnSearchClick(view)}">


                                <com.example.myapplication.view.MytextView
                                    android:id="@+id/btn_xiaoliang"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="销量"
                                    android:textColor="@color/color_555555"
                                    android:textSize="@dimen/sp_14" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_srb"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_toRightOf="@+id/ll_xiaoliang"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:tag="0"
                                android:visibility="gone"
                                app:clickview="@{(view)->activity.btnSearchClick(view)}">


                                <com.example.myapplication.view.MytextView
                                    android:id="@+id/btn_srb"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="收入比"
                                    android:textColor="@color/color_999999"
                                    android:textSize="@dimen/sp_14" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_jiage"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_toRightOf="@+id/ll_srb"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:orientation="horizontal"
                                android:tag="0"
                                app:clickview="@{(view)->activity.btnSearchClick(view)}">


                                <com.example.myapplication.view.MytextView
                                    android:id="@+id/btn_jiage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="价格"
                                    android:textColor="@color/color_555555"
                                    android:textSize="@dimen/sp_14" />

                            </LinearLayout>


                        </LinearLayout>


                        <com.example.myapplication.view.MytextView
                            android:id="@+id/btn_search1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_toLeftOf="@+id/btn_search2"
                            android:text="优惠券"
                            android:textColor="@color/color_555555"
                            android:textSize="@dimen/sp_14" />

                        <com.hjq.widget.view.SwitchButton
                            android:id="@+id/btn_search2"
                            android:layout_width="40dp"
                            android:layout_height="@dimen/dp_20"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_12" />

                    </LinearLayout>

                </com.google.android.material.appbar.AppBarLayout>


                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <com.github.jdsjlzx.recyclerview.LRecyclerView
                        android:id="@+id/lv_goodslist"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_f2f2f2" />


                    <include
                        android:id="@+id/empty_view"
                        layout="@layout/not_data_xml"
                        android:visibility="gone" />
                </LinearLayout>


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_margin="15dp"
                    android:outlineAmbientShadowColor="@color/white"
                    android:scaleType="center"
                    android:src="@mipmap/zzzz"
                    app:backgroundTint="@color/white"
                    app:fabCustomSize="@dimen/dp_40"
                    app:fabSize="normal"
                    app:maxImageSize="@dimen/dp_30" />

            </androidx.coordinatorlayout.widget.CoordinatorLayout>

        </LinearLayout>

    </LinearLayout>
</layout>