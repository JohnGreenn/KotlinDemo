<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activity"
            type="com.hpkj.sheplive.activity.ShopEditAddressActivity" />

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.EditAddressBean" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.hjq.bar.TitleBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_top_height"
            app:title="修改收货地址"
            app:rightTitle="保存"
            app:rightColor="@color/color_FF4A4E"
            app:rightSize="@dimen/txt_size_15"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/color_f2f2f2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_50"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                style="@style/shtext"
                android:text="收货人    " />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/add_address_name"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:hint="请输入收货人姓名"
                style="@style/shtext2" />
        </LinearLayout>

        <View style="@style/new_line25" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_50"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                style="@style/shtext"
                android:text="手机号码" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_phone"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:hint="请输入手机号码"
                style="@style/shtext2" />
        </LinearLayout>

        <View style="@style/new_line25" />

        <LinearLayout
            android:id="@+id/ll_person_data_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_50"
            android:orientation="horizontal"
            app:clickview="@{(view)->activity.onClick(view)}">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                style="@style/shtext"
                android:text="所在地区" />

            <com.example.myapplication.view.MytextView
                android:id="@+id/sb_person_data_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="@dimen/txt_size_15"
                android:layout_gravity="center_vertical"
                android:textColorHint="@color/color_343434"
                android:textColor="@color/color_343434"
                android:layout_marginLeft="25dp"
                android:drawableRight="@mipmap/goods_enter"
                android:paddingRight="@dimen/dp_15"
                android:hint="请选择地区"
                app:clickview="@{(view)->activity.onClick(view)}" />

        </LinearLayout>

        <View style="@style/new_line25" />


        <com.hjq.widget.view.ClearEditText
            android:id="@+id/detail_address"
            style="@style/EditTextStyle3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="详细地址：如道路、门牌号、小区、楼栋号、单元室等" />

        <View
            style="@style/new_line25"
            android:layout_height="@dimen/dp_12" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_50">

            <com.example.myapplication.view.MytextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size_15"
                android:textColor="@color/color_333333"
                android:text="地址标签"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_toRightOf="@+id/txt1"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_one"
                    style="@style/radioaddress"
                    android:text="家"
                    android:layout_marginRight="@dimen/dp_10" />

                <RadioButton
                    android:id="@+id/radio_two"
                    style="@style/radioaddress"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="公司" />

                <RadioButton
                    android:id="@+id/radio_three"
                    style="@style/radioaddress"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="学校" />

                <RadioButton
                    android:id="@+id/radio_four"
                    style="@style/radioaddress"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="其他" />

            </RadioGroup>


        </RelativeLayout>

        <View style="@style/new_line25" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_50">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置默认地址"
                android:textColor="@color/color_333333"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15" />

            <com.hjq.widget.view.SwitchButton
                android:id="@+id/sb_moren"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="40dp"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="15dp" />

        </RelativeLayout>


        <View style="@style/new_line25" />

        <RelativeLayout
            android:id="@+id/add_del"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_50"
            app:clickview="@{(view)->activity.onClick(view)}">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除该地址"
                android:textColor="@color/color_FF4A4E"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/color_f2f2f2">

        </LinearLayout>

    </LinearLayout>
</layout>