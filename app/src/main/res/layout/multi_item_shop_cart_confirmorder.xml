        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_15"
            android:text="积分抵扣"
            android:visibility="gone"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/txt_size_12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_txt2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_txt44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_30"
            android:text="积分抵扣"
            android:visibility="gone"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/txt_size_12"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_txt2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_txt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:text="订单备注"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/txt_size_12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_txt4" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/tv_txt55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@null"
            android:hint="选填，请先与商家协商一致"
            android:text='@={data.comments}'
            android:textColor="@color/color_555555"
            android:textSize="@dimen/txt_size_12"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_txt4" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/all_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_10"
            android:text='@{"¥"+data.shopgoodsallprice,default="-"}'
            android:textColor="@color/color_EE2633"
            android:textSize="@dimen/txt_size_12"
            app:layout_constraintTop_toBottomOf="@+id/tv_txt5"
            app:layout_constraintRight_toRightOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_txt6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="总计："
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_12"
            app:layout_constraintTop_toBottomOf="@+id/tv_txt5"
            app:layout_constraintRight_toLeftOf="@+id/all_price" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:text='@{"共"+data.shopgoodsallnum+"件"}'
            android:textColor="@color/color_555555"
            android:textSize="@dimen/txt_size_12"
            app:layout_constraintTop_toBottomOf="@+id/tv_txt5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_txt6" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>