<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activity"
            type="com.hpkj.sheplive.activity.ShopCartConfirmOrderActivity" />

        <variable
            name="positon"
            type="Integer" />

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.GwcGoodsListBean2" />

        <variable
            name="datasub"
            type="com.hpkj.sheplive.entity.GwcGoodsListBean2.GoodsListBean" />

        <variable
            name="num"
            type="Integer" />

        <variable
            name="price"
            type="Double" />


        <!--        <variable-->
        <!--            name="data2"-->
        <!--            type="com.hpkj.sheplive.entity.GwcGoodsListBean.ShopInfoBean" />-->


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_17"
        android:background="@drawable/bg_shadow">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/shop_ico"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_12"
            android:src="@drawable/app_icon"
            app:url='@{data.logo}'
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="@dimen/dp_12"
            android:text='@{data.shopName,default="--"}'
            android:textColor="@color/color_333333"
            android:textSize="@dimen/txt_size_14"
            app:layout_constraintLeft_toRightOf="@+id/shop_ico"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/sp_liner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shop_ico" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:text="配送方式"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/txt_size_12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sp_liner" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_txt22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:text='@{data.allpostprice==0?"快递 免邮":"快递 "+data.allpostprice+"元",default="快递 免邮"}'
            android:textColor="@color/color_555555"
            android:textSize="@dimen/txt_size_12"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sp_liner" />

