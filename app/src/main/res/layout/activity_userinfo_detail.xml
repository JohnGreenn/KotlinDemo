        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_person_data_avatar"
            android:layout_width="103dp"
            android:layout_height="103dp"
            android:layout_marginTop="113dp"
            app:clickview="@{(view)->activity.onClick(view)}"
            android:background="@drawable/bg_circle_layer"
            android:padding="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/my_tou"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="360dp" />

        <com.example.myapplication.view.MytextView
            android:id="@id/txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3.5dp"
            android:text='@{data.nickname,default="--"}'
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toBottomOf="@id/img_1"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintRight_toLeftOf="@id/img_1"
            app:layout_constraintLeft_toLeftOf="@+id/iv_person_data_avatar"
            app:layout_constraintTop_toTopOf="@id/img_1"
            tools:ignore="MissingConstraints" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/img_1"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginTop="20dp"
            android:src='@{data.sex==0?@drawable/personal_man:@drawable/personal_woman,default=@drawable/personal_man}'
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintRight_toRightOf="@+id/iv_person_data_avatar"
            app:layout_constraintLeft_toRightOf="@id/txt_1"
            app:layout_constraintTop_toBottomOf="@+id/iv_person_data_avatar"
            tools:ignore="MissingConstraints" />

        <com.example.myapplication.view.MytextView
