<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.hjq.bar.TitleBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_top_height"
            android:background="@color/color_343434"
            app:leftIcon="@mipmap/back_white"
            app:title="我的订单"
            app:titleColor="@color/white" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/myorder_tablayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/color_f2f2f2"
            app:tabIndicatorColor="@color/color_e0b777"
            app:tabIndicatorHeight="4dp"
            app:tabSelectedTextColor="@color/color_e0b777"
            app:tabTextColor="@color/color_999999" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_E4E4E4" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/order_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</layout>