<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


        <variable
            name="data"
            type="com.hpkj.sheplive.entity.SpBean" />

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />

        <import type="android.view.View" />

        <variable
            name="yjbl"
            type="Float" />

        <import type="android.text.Html" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_wntj_bg"
        android:paddingBottom="14dp"
        app:clickview='@{(view)->click.showGoodsDetail(view,data.item_id)}'>

        <androidx.constraintlayout.widget.Guideline
            android:id="@id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="7dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="7dp" />


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/home_item_img"
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_empty"
            app:imgmoren="@{@drawable/bg_empty}"
            app:riv_corner_radius_top_left="10dp"
            app:riv_corner_radius_top_right="10dp"
            app:url="@{data.pict_url}"
            tools:ignore="MissingConstraints" />


        <com.example.myapplication.view.MytextView
            android:id="@+id/tv_gooods_type"
            android:layout_width="30dp"
            android:layout_height="@dimen/dp_15"
            android:layout_marginTop="22dp"
            android:background="@drawable/bg_red_7radius"
            android:gravity="center"
            android:padding="1dp"
            android:text='@{data.user_type==1?"天猫":"淘宝",default="天猫"}'
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_11"
            app:layout_constraintLeft_toLeftOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/home_item_img" />

        <com.example.myapplication.view.MytextView
            android:id="@id/txt_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:maxLines="2"
            android:minLines="2"
            android:text='@{click.sptitle(data,1)}'
            android:textColor="@color/color_333333"
            android:textSize="@dimen/txt_size_14"
            app:layout_constraintLeft_toLeftOf="@id/guideline"
            app:layout_constraintRight_toRightOf="@id/guideline1"
            app:layout_constraintTop_toBottomOf="@+id/home_item_img"
            tools:ignore="MissingConstraints"
            tools:text="          -" />

        <LinearLayout
            android:id="@+id/line_fxz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_coupon_pink"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingTop="1dp"
            android:paddingRight="5dp"
            android:paddingBottom="1dp"
            app:layout_constraintLeft_toRightOf="@+id/ll_coupon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_1"
            tools:ignore="MissingConstraints">

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享赚"
                android:textColor="@color/color_FF4A4D"
                android:textSize="@dimen/txt_size_12" />

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="¥"
                android:textColor="@color/color_FF4A4D"
                android:textSize="@dimen/txt_size_11" />

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{click.spbonus(data,yjbl)}'
                android:textColor="@color/color_FF4A4D"
                android:textSize="@dimen/txt_size_13"
                tools:text="0.00" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_coupon"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@+id/title"
            android:layout_marginRight="2.5dp"
            android:background="@drawable/bg_coupon_1radius"
            android:orientation="horizontal"
            android:visibility="@{click.couponshow(data)?View.VISIBLE:View.GONE,default=visible}"
            app:layout_constraintBottom_toBottomOf="@+id/line_fxz"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="@id/guideline"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintRight_toLeftOf="@+id/line_fxz"
            app:layout_constraintTop_toTopOf="@+id/line_fxz">

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:text="券"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_11" />

            <View
                android:id="@+id/view"
                android:layout_width="5dp"
                android:layout_height="@dimen/dp_17"
                android:background="@drawable/vertical_line" />

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_11" />

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text='@{click.couponamount(data)}'
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_13"
                tools:text="0" />

        </LinearLayout>


        <com.example.myapplication.view.MytextView
            android:id="@+id/tv_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text='@{data.zk_final_price==null?"¥-.--":"¥"+click.orgprice(data)+" "}'
            android:textColor="@color/color_999999"
            android:textSize="@dimen/txt_size_11"
            app:layout_constraintLeft_toRightOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/line_fxz"
            app:layout_goneMarginTop="6dp"
            tools:text="¥0.00" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/color_999999"
            app:layout_constraintBottom_toBottomOf="@+id/tv_txt"
            app:layout_constraintLeft_toLeftOf="@+id/tv_txt"
            app:layout_constraintRight_toRightOf="@+id/tv_txt"
            app:layout_constraintTop_toTopOf="@+id/tv_txt" />

        <com.example.myapplication.view.MytextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{click.spvolume(data,1)}'
            android:textColor="@color/color_999999"
            android:textSize="@dimen/txt_size_11"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_txt"
            app:layout_constraintRight_toRightOf="@id/guideline1"
            tools:ignore="MissingConstraints"
            tools:text="--人已买" />


        <com.example.myapplication.view.MytextView
            android:id="@id/txt_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="到手价"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/txt_size_12"
            app:layout_constraintLeft_toRightOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/tv_txt" />

        <com.example.myapplication.view.MytextView
            android:id="@id/txt_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_1"
            android:gravity="bottom"
            android:text="¥"
            android:textColor="@color/color_d81e07"
            android:textSize="@dimen/txt_size_11"
            app:layout_constraintBaseline_toBaselineOf="@id/txt_5"
            app:layout_constraintLeft_toRightOf="@id/txt_5"
            tools:ignore="MissingConstraints" />

        <com.example.myapplication.view.MytextView
            android:id="@id/txt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{click.spqhj(data)}'
            android:textColor="@color/color_FF4A4D"
            android:textSize="@dimen/txt_size_16"
            app:layout_constraintBaseline_toBaselineOf="@id/txt_5"
            app:layout_constraintLeft_toRightOf="@id/txt_3"
            tools:ignore="MissingConstraints"
            tools:text="0.00" />

        <com.example.myapplication.view.MytextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/btn_homefx_qiang"
            android:gravity="center"
            android:text="抢"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_14"
            app:layout_constraintBottom_toBottomOf="@id/txt_2"
            app:layout_constraintRight_toLeftOf="@id/guideline1"
            app:layout_constraintTop_toTopOf="@id/txt_2"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>