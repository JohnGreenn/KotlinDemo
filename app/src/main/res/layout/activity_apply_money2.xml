<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activity"
            type="com.hpkj.sheplive.activity.ApplyMoneyFinish" />

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.CashBean" />

        <variable
            name="price"
            type="Float" />

        <import type="android.text.Html" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.hjq.bar.TitleBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_top_height"
            app:title="提现申请" />

        <com.example.myapplication.view.MytextView
            android:id="@+id/tv_txvaluetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:text="可提现余额："
            android:textColor="@color/color_666666"
            android:textSize="@dimen/txt_size_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.example.myapplication.view.MytextView
                android:id="@+id/tv_banlance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_weight="1"
                android:textColor="@color/color_343434"
                android:textSize="@dimen/txt_size_17" />

            <com.example.myapplication.view.MytextView
                android:id="@+id/all_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_16"
                android:text="全部提现"
                android:textColor="@color/color_e0b777"
                android:textSize="@dimen/txt_size_12"
                app:clickview="@{(view)->activity.btnClick(view)}" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@color/color_f2f2f2" />

        <com.example.myapplication.view.MytextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:text="我要提现"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/txt_size_14" />

        <EditText
            android:id="@+id/et_withdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@null"
            android:hint="输入提现金额"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/txt_size_17" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="@color/color_f2f2f2" />

        <com.example.myapplication.view.MytextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:text='@{"最低提现金额："+data.cash_mini_amount+""+"元"}'
            android:textColor="@color/color_666666"
            android:textSize="@dimen/txt_size_14" />

        <com.example.myapplication.view.MytextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:text="提现时间：每月25日至月底"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/txt_size_14" />

        <com.example.myapplication.view.MytextView
            android:id="@+id/tv_cashrecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:text="提现记录"
            android:textColor="@color/color_FF0000"
            app:clickview="@{(view)->activity.btnClick(view)}" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_apply_money"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="24dp"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/btn_common"
            android:text="提交"
            android:textColor="@color/white"
            app:clickview="@{(view)->activity.btnClick(view)}" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="32dp"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/bg_shadow"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_weight="1"
                    android:text="支付宝账号信息"
                    android:textColor="@color/color_343434"
                    android:textSize="@dimen/txt_size_14" />

                <com.example.myapplication.view.MytextView
                    android:id="@+id/tv_modify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:drawableLeft="@mipmap/xiugai"
                    android:text="修改"
                    android:textColor="@color/color_e0b777"
                    android:textSize="@dimen/txt_size_14"
                    app:clickview="@{(view)->activity.btnClick(view)}" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/color_f2f2f2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="姓名：    "
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/txt_size_15" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:background="@null"
                    android:text='@{data.alipay_realname}'
                    android:textColor="@color/color_343434"
                    android:textSize="@dimen/txt_size_16" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/color_f2f2f2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="支付宝账号："
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/txt_size_15" />

                <EditText
                    android:id="@+id/et_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:background="@null"
                    android:text='@{data.alipay_account}'
                    android:textColor="@color/color_343434"
                    android:textSize="@dimen/txt_size_16" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/color_f2f2f2" />
        </LinearLayout>
    </LinearLayout>
</layout>