<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activity"
            type="com.hpkj.sheplive.activity.NewApplyMoneyActivity" />

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.CashBean" />

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_EAE8E8"
        android:orientation="vertical">

        <com.hjq.bar.TitleBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_top_height"
            app:title="提现申请" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_18"
            android:background="@drawable/bg_shadow">

            <com.example.myapplication.view.MytextView
                android:id="@+id/tv_all_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:text='@{data.withdrawables==null||data.withdrawables.equalsIgnoreCase("")?"¥-.--":"¥"+data.withdrawables,default="¥0"}'
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_24"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:text="可提现金额"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_13"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_all_money" />

            <com.example.myapplication.view.MytextView
                android:id="@+id/txt_tixian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginTop="117dp"
                android:text="提现金额"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.example.myapplication.view.MytextView
                android:id="@+id/tv_rmb_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginTop="16dp"
                android:text="¥"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_18"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_tixian" />

            <EditText
                android:id="@+id/et_withdraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_18"
                android:background="@null"
                android:hint='@{"最低提现金额："+data.cash_mini_amounts+"元"}'
                android:textColor="@color/color_999999"
                android:textSize="@dimen/txt_size_12"
                app:layout_constraintLeft_toRightOf="@+id/tv_rmb_symbol"
                app:layout_constraintTop_toBottomOf="@+id/txt_tixian" />

            <com.example.myapplication.view.MytextView
                android:id="@+id/all_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.5dp"
                android:layout_marginRight="@dimen/dp_16"
                android:text="全部"
                android:textColor="@color/color_E84447"
                android:textSize="@dimen/txt_size_13"
                app:clickview="@{(view)->activity.btnClick(view)}"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_tixian" />

            <View
                android:id="@+id/line_view"
                style="@style/new_line"
                android:layout_marginTop="@dimen/dp_15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/all_tx" />

            <com.example.myapplication.view.MytextView
                android:id="@+id/txt_zfb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_18"
                android:text="到账支付宝信息"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line_view" />

            <EditText
                android:id="@+id/et_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="19dp"
                android:background="@null"
                android:text='@{data.alipay_account,default="--"}'
                android:textColor="@color/color_999999"
                android:textSize="@dimen/txt_size_12"
                app:layout_constraintLeft_toRightOf="@+id/txt_zfb"
                app:layout_constraintTop_toBottomOf="@+id/line_view" />

            <com.example.myapplication.view.MytextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_12"
                android:text="真实姓名"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_zfb" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="66dp"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:text='@{data.alipay_realname,default="--"}'
                android:textColor="@color/color_999999"
                android:textSize="@dimen/txt_size_12"
                app:layout_constraintLeft_toRightOf="@+id/txt_name"
                app:layout_constraintTop_toBottomOf="@+id/txt_zfb" />

            <com.example.myapplication.view.MytextView
                android:id="@+id/tv_modify"
                android:layout_width="35dp"
                android:layout_height="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_18"
                android:background="@drawable/btn_red_10radius"
                android:gravity="center"
                android:text="修改"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_12"
                app:clickview="@{(view)->activity.btnClick(view)}"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line_view" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.example.myapplication.view.MytextView
            android:id="@+id/btn_apply_money"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"
            android:background="@drawable/btn_red_20radius"
            android:gravity="center"
            android:text="提交申请"
            android:textColor="@color/white"
            app:clickview="@{(view)->activity.btnClick(view)}" />

        <com.example.myapplication.view.MytextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_12"
            android:text="*每月25日至月底为提现时间"
            android:textColor="@color/color_FF4A4D"
            android:textSize="@dimen/txt_size_12" />


        <com.example.myapplication.view.MytextView
            android:id="@+id/tv_cashrecord"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/goods_enter"
            android:gravity="center_vertical"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:text="提现记录"
            android:textColor="@color/color_FF333333"
            android:textSize="@dimen/txt_size_13"
            app:clickview="@{(view)->activity.btnClick(view)}" />

    </LinearLayout>
</layout>