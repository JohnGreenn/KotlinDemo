<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="com.hpkj.sheplive.utils.ClickUtil" />

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.ShopOrderListBean" />

        <variable
            name="activity"
            type="com.hpkj.sheplive.activity.ReturnOnlyMoneyMethodActivity" />

        <variable
            name="click"
            type="ClickUtil" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.hjq.bar.TitleBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_top_height"
            app:lineVisible="false"
            app:title="只退款" />

        <View
            style="@style/HorizontalLineStyle"
            android:layout_gravity="bottom" />

        <LinearLayout
            android:id="@+id/ll_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_f3f3f3"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/white"
                android:paddingLeft="7dp"
                android:paddingRight="7dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/dp_80" />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/item_img"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_empty"
                    app:imgmoren="@{@drawable/bg_empty}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:riv_corner_radius="@dimen/dp_5"
                    app:url="@{data.orderDetail.get(0).goodsImage}" />


                <com.example.myapplication.view.MytextView
                    android:id="@+id/tv_title"
                    style="@style/ReturnTextviewStyle"
                    android:layout_width="0dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@{data.orderDetail.get(0).goodsName}"
                    app:layout_constraintLeft_toRightOf="@+id/guideline"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/item_img" />

                <!--                    android:text='@{data.orderDetail.get(0).goodsName==null?"":Html.fromHtml(String.format(@string/item_kx_stock,data.title)),default="          -"}'-->
                <LinearLayout
                    android:id="@+id/ll_spec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@color/color_f2f2f2"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_4"
                    app:layout_constraintBottom_toBottomOf="@+id/item_img"
                    app:layout_constraintLeft_toRightOf="@+id/guideline">

                    <com.example.myapplication.view.MytextView
                        style="@style/ReturnTextviewStyle"
                        android:text="@{data.orderDetail.get(0).skuDesc}" />
                    <!--                        android:text="尺寸：100X100"-->

                    <com.example.myapplication.view.MytextView
                        style="@style/ReturnTextviewStyle"
                        android:layout_gravity="bottom"
                        android:text="颜色分类：苹果绿"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:id="@+id/rl_goodsstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="horizontal"
                app:clickview="@{(view)->activity.onClick(view)}">

                <TextView
                    android:id="@+id/tv_flg_name"
                    style="@style/ReturnTextviewStyle"
                    android:layout_alignParentLeft="true"
                    android:padding="@dimen/dp_10"
                    android:text="货物状态" />

                <TextView
                    android:id="@+id/tv_status"
                    style="@style/ReturnTextviewStyle"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@mipmap/goods_enter"
                    android:drawablePadding="@dimen/dp_4"
                    android:padding="@dimen/dp_10"
                    android:text="请选择" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_goodsreason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="horizontal"
                app:clickview="@{(view)->activity.onClick(view)}">

                <TextView
                    style="@style/ReturnTextviewStyle"
                    android:layout_alignParentLeft="true"
                    android:padding="@dimen/dp_10"
                    android:text="退款原因" />

                <TextView
                    android:id="@+id/tv_reason"
                    style="@style/ReturnTextviewStyle"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@mipmap/goods_enter"
                    android:drawablePadding="@dimen/dp_4"
                    android:padding="@dimen/dp_10"
                    android:text="请选择" />
            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/white"
                android:padding="@dimen/dp_10">

                <TextView
                    android:id="@+id/tv_jine"
                    style="@style/ReturnTextviewStyle"
                    android:text="退款金额："
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_rmb"
                    style="@style/ReturnTextviewStyle"
                    android:text="¥"
                    android:textColor="@color/tv_red"
                    app:layout_constraintLeft_toRightOf="@id/tv_jine"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    style="@style/ReturnTextviewStyle"
                    android:text="@{String.valueOf(data.payPrice)}"
                    android:textColor="@color/tv_red"
                    app:layout_constraintLeft_toRightOf="@id/tv_rmb"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_jine">

                    <TextView
                        style="@style/ReturnTextviewStyle"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="不可修改，最多¥"
                        android:textColor="@color/color_999999" />

                    <TextView
                        android:id="@+id/tv_most"
                        style="@style/ReturnTextviewStyle"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@{String.valueOf(data.payPrice)}"
                        android:textColor="@color/color_999999" />

                    <TextView
                        style="@style/ReturnTextviewStyle"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text=",含发货邮费"
                        android:textColor="@color/color_999999" />
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReturnTextviewStyle"
                    android:padding="@dimen/dp_10"
                    android:text="退款说明：" />

                <com.hjq.widget.view.ClearEditText
                    android:id="@+id/et_reasons"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="选填"
                    android:includeFontPadding="false"
                    android:padding="10dp"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/txt_size_13" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_10">

                <TextView
                    android:id="@+id/tv_evident"
                    style="@style/ReturnTextviewStyle"
                    android:text="上传凭证"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    style="@style/ReturnTextviewStyle"
                    android:text="（最多三张）"
                    android:textColor="@color/color_999999"
                    app:layout_constraintLeft_toRightOf="@id/tv_evident"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/iv_photo"
                    style="@style/ReturnTextviewStyle"
                    android:layout_margin="@dimen/dp_10"
                    android:src="@mipmap/ic_add_photo"
                    android:visibility="gone"
                    app:clickview="@{(view)->activity.onClick(view)}"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_evident" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_photos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:overScrollMode="never"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_evident" />

                <TextView
                    android:id="@+id/tv_ok"
                    style="@style/ReturnTextviewStyle"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/bg_bold_red_15radius"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingTop="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_4"
                    android:text="提交"
                    app:clickview="@{(view)->activity.onClick(view)}"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rv_photos" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>

</layout>