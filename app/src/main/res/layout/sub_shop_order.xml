<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.hpkj.sheplive.fragment.ShopOrderFragment" />

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />

        <variable
            name="positon"
            type="Integer" />

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.ShopOrderListBean.OrderDetailBean" />

        <variable
            name="data2"
            type="com.hpkj.sheplive.entity.GwcGoodsListBean.ShopInfoBean" />

        <import type="android.view.View" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:clickview="@{(view)->click.showShopGoodsDetail(view,Integer.valueOf(data.goodsId))}">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/goods_img"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="@dimen/dp_17"
            android:scaleType="fitXY"
            android:src="@drawable/bg_empty"
            app:imgmoren="@{@drawable/bg_empty}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:url="@{data.goodsImage}" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/goods_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="2"
            android:text='@{data.goodsName??"",default="--"}'
            android:textColor="@color/color_333333"
            android:textSize="@dimen/txt_size_13"
            app:layout_constraintLeft_toRightOf="@+id/goods_img"
            app:layout_constraintRight_toLeftOf="@id/txt_price"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="38dp"
            android:visibility='@{data.skuDesc.equals("")?View.GONE:View.VISIBLE}'
            app:layout_constraintLeft_toRightOf="@+id/goods_img"
            app:layout_constraintTop_toBottomOf="@+id/goods_title">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text='@{data.skuDesc??"",default="--"}'
                android:textColor="@color/color_999999"
                android:textSize="@dimen/txt_size_10"
                app:layout_constraintLeft_toRightOf="@+id/goods_img"
                app:layout_constraintTop_toBottomOf="@+id/goods_title" />

        </LinearLayout>

        <com.example.myapplication.view.MytextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_marginRight="@dimen/dp_12"
            android:text='@{data.price==null?"¥ 0.00":"¥"+data.price,default="--"}'
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.myapplication.view.MytextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/dp_12"
            android:text='@{"X"+data.count,default="--"}'
            android:textColor="@color/color_999999"
            android:textSize="@dimen/txt_size_10"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_price" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>