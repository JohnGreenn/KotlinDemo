<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="yjbl"
            type="Float" />

        <import type="android.view.View" />

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />

        <variable
            name="share"
            type="com.hpkj.sheplive.entity.KLTxtBean" />

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.SpBean" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/haibao_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/haibao_img"
                android:layout_width="match_parent"
                android:layout_height="385dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                app:riv_corner_radius_top_left="2dp"
                app:riv_corner_radius_top_right="2dp"
                app:url="@{data.pict_url}" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/haibao_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_10"
                android:maxLines="2"
                android:minLines="2"
                android:text='@{click.sptitle(data,2)}'
                android:textColor="@color/color_333333"
                android:textSize="@dimen/txt_size_14"
                tools:text="商品名称商品名称商品名称商品名称" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="券后价¥"
                    android:textColor="@color/color_FF4A4D"
                    android:textSize="@dimen/txt_size_12" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_txt"
                    android:layout_toRightOf="@+id/tv_txt"
                    android:text='@{click.spqhj(data)}'
                    android:textColor="@color/color_d81e07"
                    android:textSize="20sp"
                    tools:text="--" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/haibao_yuanjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_toRightOf="@+id/tv_txt2"
                    android:text='@{"¥"+click.orgprice(data)}'
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/txt_size_12"
                    tools:text="¥--" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_haibao_quan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@mipmap/share_bg_cou_big"
                    android:orientation="horizontal"
                    android:visibility="@{click.couponshow(data)?View.VISIBLE:View.GONE,default=visible}">

                    <com.example.myapplication.view.MytextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="券"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_13" />

                    <com.example.myapplication.view.MytextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:text="¥"
                        android:textColor="@color/white"
                        android:textSize="11sp" />

                    <com.example.myapplication.view.MytextView
                        android:id="@+id/haibao_quan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="1dp"
                        android:text='@{click.couponamount(data)}'
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        tools:text="--" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/haibao_codeimg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_7"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@drawable/bg_empty"
                    app:ewmurl="@{data.coupon_share_url}" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/haibao_codeimg"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="@dimen/dp_7"
                    android:layout_marginBottom="5dp"
                    android:text="扫码识别"
                    android:textColor="@color/color_666666"
                    android:textSize="13sp" />


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</layout>