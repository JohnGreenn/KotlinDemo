<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="click"
            type="com.hpkj.sheplive.activity.ShopSearchActivity" />

        <import type="android.view.View" />

        <variable
            name="flg"
            type="Integer" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_top_height"
            android:background="@color/color_EDEDED"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/transparent"
                android:src="@mipmap/back_grey"
                app:clickview="@{(view)->click.clickExit(view)}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/sertch_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/search_bg_white_15radius"
                    android:drawableLeft="@mipmap/search_small2"
                    android:drawablePadding="10dp"
                    android:ellipsize="end"
                    android:hint="请输入商品名称"
                    android:imeOptions="actionSearch"
                    android:paddingLeft="9dp"
                    android:paddingRight="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/txt_size_13" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="13dp"
                android:paddingRight="16dp"
                android:text="搜索"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/txt_size_13"
                app:clickview="@{(view)->click.clickSearch(view)}" />
        </LinearLayout>

        <!--历史搜索-->
        <LinearLayout
            android:id="@+id/ll_history_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@color/white">

                <com.example.myapplication.view.MytextView
                    android:id="@+id/tv_history_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="历史搜索"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="parent"
                    app:layout_constraintTop_toBottomOf="parent"
                    tools:ignore="MissingConstraints" />

                <ImageButton
                    android:id="@+id/clear_all_records"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:contentDescription="TODO"
                    android:src="@mipmap/ic_delete_history2"
                    app:layout_constraintBottom_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/fl_search_records"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                app:is_limit="true"
                app:limit_line_count="3"
                app:max_select="1" />

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="TODO"
                android:src="@mipmap/ic_arrow"
                android:visibility="gone" />
        </LinearLayout>

        <com.github.jdsjlzx.recyclerview.LRecyclerView
            android:id="@+id/lv_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include
            android:id="@+id/empty_view"
            layout="@layout/not_data_xml"
            android:visibility="gone" />

    </LinearLayout>
</layout>