<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.hjq.bar.TitleBar
            android:id="@+id/my_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_top_height"
            app:title="我的资料" />

        <com.hjq.widget.layout.SettingBar
            android:id="@+id/sb_person_data_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            app:bar_leftText="身份认证"
            android:visibility="gone"
            app:bar_rightIcon="@mipmap/goods_enter"
            app:clickview="@{(view)->click.enterIdentityCheck(view)}" />

        <com.hjq.widget.layout.SettingBar
            android:id="@+id/sb_person_data_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bar_leftText="收货地址"
            app:bar_rightIcon="@mipmap/goods_enter"
            app:clickview="@{(view)->click.enterMyAddress(view,0,false,true)}" />

        <com.hjq.widget.layout.SettingBar
            android:id="@+id/sb_bank_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bar_leftText="账户管理"
            android:visibility="gone"
            app:bar_rightIcon="@mipmap/goods_enter"
            app:clickview="@{(view)->click.enterBankAdmin(view)}" />

    </LinearLayout>
</layout>