<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.CashListBean.ListBean.DataBean" />

        <variable
            name="positon"
            type="Integer" />

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />

        <variable
            name="entertype"
            type="Integer" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_15"
        app:clickview="@{(view)->click.moreMoney2(view,3,data.order_id,0,data._income_total)}">

        <com.example.myapplication.view.MytextView
            android:id="@+id/tv_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text='@{data._income_type,default="--"}'
            android:textColor="@color/color_333333"
            android:textSize="@dimen/txt_size_13" />

        <com.example.myapplication.view.MytextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:text='@{"+"+data._income_total+"元"}'
            android:textColor="@color/color_FF4A4D"
            android:textSize="@dimen/txt_size_13" />

        <com.example.myapplication.view.MytextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_txt1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text='@{entertype==4||entertype==6?"结算时间:"+data._income_time:""+data._income_time,default="--"}'
            android:textSize="@dimen/txt_size_13" />

    </RelativeLayout>
</layout>