<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="tgfy"
            type="Float" />

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.SpBean" />

        <variable
            name="data2"
            type="com.hpkj.sheplive.entity.PriceInfoBeanX" />

        <import type="android.view.View" />

        <!--优惠券信息-->
        <import type="java.util.ArrayList" />

        <import type="com.hpkj.sheplive.entity.CouponListBeanX" />

        <import type="android.text.Html" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        app:clickview="@{(view)->click.showJDGoodsDetail(view,data.item_id)}">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_shop_goodspic"
            android:layout_width="107dp"
            android:layout_height="107dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_empty"
            app:imgmoren="@{@drawable/bg_empty}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="@dimen/dp_5"
            app:url="@{data.pict_url}" />


        <com.example.myapplication.view.MytextView
            android:id="@+id/tv_gooods_type"
            android:layout_width="30dp"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/bg_red_7radius"
            android:gravity="center"
            android:padding="1dp"
            android:layout_marginTop="2dp"
            android:text="京东"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_11"
            app:layout_constraintLeft_toRightOf="@+id/iv_shop_goodspic"
            app:layout_constraintTop_toTopOf="@+id/iv_shop_goodspic" />

        <com.example.myapplication.view.MytextView
            android:id="@+id/tv_sp_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text='@{click.sptitle(data,1)}'
            android:textColor="@color/color_010101"
            android:textSize="@dimen/txt_size_14"
            app:layout_constraintLeft_toLeftOf="@+id/tv_gooods_type"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_shop_goodspic"
            tools:text="          -" />

        <LinearLayout
            android:id="@+id/item_q_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/new_conpoun"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:visibility="@{click.couponshow(data)?View.VISIBLE:View.GONE,default=visible}"
            app:layout_constraintLeft_toRightOf="@+id/iv_shop_goodspic"
            app:layout_constraintTop_toBottomOf="@+id/tv_sp_title">

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="券"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_12" />

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="¥"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_11" />

            <com.example.myapplication.view.MytextView
                android:id="@+id/tv_cou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text='@{click.couponamount(data)}'
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_13"
                tools:text="-" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fenxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/bg_coupon_pink"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            app:layout_constraintLeft_toRightOf="@+id/item_q_linear"
            app:layout_constraintTop_toBottomOf="@+id/tv_sp_title"
            tools:ignore="MissingConstraints">

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享赚"
                android:textColor="@color/color_FF4A4D"
                android:textSize="@dimen/txt_size_12" />

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="¥"
                android:textColor="@color/color_FF4A4D"
                android:textSize="@dimen/txt_size_11" />

            <com.example.myapplication.view.MytextView
                android:id="@+id/tv_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{click.spbonus(data,tgfy)}'
                android:textColor="@color/color_FF4A4D"
                android:textSize="@dimen/txt_size_13"
                tools:text="0.00" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="42dp"
            android:gravity="bottom"
            app:layout_constraintBottom_toBottomOf="@+id/iv_shop_goodspic"
            app:layout_constraintLeft_toRightOf="@+id/iv_shop_goodspic"
            tools:ignore="MissingConstraints">

            <com.example.myapplication.view.MytextView
                android:id="@id/txt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@color/color_FF4A4D"
                android:textSize="@dimen/txt_size_11"
                app:layout_constraintBaseline_toBaselineOf="@id/item_price_2" />

            <com.example.myapplication.view.MytextView
                android:id="@+id/item_price_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text='@{click.spqhj(data)}'
                android:textColor="@color/color_FF4A4D"
                android:textSize="@dimen/txt_size_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/txt_2"
                tools:text="0.00" />

            <com.example.myapplication.view.MytextView
                android:id="@id/txt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="bottom"
                android:text="¥"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/txt_size_11"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/item_price_2" />

            <com.example.myapplication.view.MytextView
                android:id="@+id/item_price_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{click.orgprice(data)}'
                android:textColor="@color/color_999999"
                android:textSize="@dimen/txt_size_11"
                app:layout_constraintBaseline_toBaselineOf="@id/txt_1"
                app:layout_constraintLeft_toRightOf="@id/txt_1"
                tools:text="0.00" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/color_999999"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/txt_1"
                app:layout_constraintRight_toRightOf="@+id/item_price_1"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.example.myapplication.view.MytextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="36dp"
            android:text='@{data.volume+"人已买"}'
            android:textColor="@color/color_666666"
            android:textSize="@dimen/txt_size_9"
            android:visibility="visible"
            app:layout_constraintLeft_toRightOf="@+id/iv_shop_goodspic"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_sp_title"
            tools:ignore="MissingConstraints"
            tools:text="--" />


        <com.example.myapplication.view.MytextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:background="@mipmap/home_fx_btn"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>