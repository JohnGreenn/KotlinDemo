<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activity"
            type="com.hpkj.sheplive.fragment.PddSearchResultsFragment" />

        <import type="com.hpkj.sheplive.utils.ClickUtil" />

        <import type="android.view.View" />

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />

        <variable
            name="sel"
            type="Integer" />

        <variable
            name="up"
            type="Boolean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/sertch_lin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/ll_paixu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="horizontal"
                    app:clickview="@{(view)->activity.btnSearchClick(view)}">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/item_background3">

                        <com.example.myapplication.view.MytextView
                            android:id="@+id/btn_search0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="默认"
                            android:textColor='@{sel==0?@color/color_FF4A4D:@color/color_333333,default=@color/color_333333}'
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:id="@+id/img_arrow_moren"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="1.5dp"
                            android:src="@drawable/small_down_arrow"
                            android:visibility='@{sel==0?View.VISIBLE:View.INVISIBLE,default=visible}'/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="TODO"
                        android:src="@mipmap/arrow_down"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_xiaoliang"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_toRightOf="@+id/ll_paixu"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:tag="0"
                    app:clickview="@{(view)->activity.btnSearchClick(view)}">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/item_background3">

                        <com.example.myapplication.view.MytextView
                            android:id="@+id/btn_xiaoliang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="销量"
                            android:textColor='@{sel==1?@color/color_FF4A4D:@color/color_333333,default=@color/color_333333}'
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:id="@+id/img_arrow_xiaoliang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="1.5dp"
                            android:src='@{click.taobph(sel,up,1)?@drawable/small_down_arrow:@drawable/small_up_arrow}'
                            android:visibility='@{sel==1?View.VISIBLE:View.INVISIBLE,default=visible}'/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_srb"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_toRightOf="@+id/ll_xiaoliang"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:tag="0"
                    android:visibility="gone"
                    app:clickview="@{(view)->activity.btnSearchClick(view)}">

                    <com.example.myapplication.view.MytextView
                        android:id="@+id/btn_srb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="收入比"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_jiage"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_toRightOf="@+id/ll_srb"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:tag="0"
                    app:clickview="@{(view)->activity.btnSearchClick(view)}">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/item_background3">

                        <com.example.myapplication.view.MytextView
                            android:id="@+id/btn_jiage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="价格"
                            android:textColor='@{sel==2?@color/color_FF4A4D:@color/color_333333,default=@color/color_333333}'
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:id="@+id/img_arrow_jiage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="1.5dp"
                            android:src='@{click.taobph(sel,up,2)?@drawable/small_down_arrow:@drawable/small_up_arrow}'
                            android:visibility='@{sel==2?View.VISIBLE:View.INVISIBLE,default=visible}'/>

                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>


            <com.example.myapplication.view.MytextView
                android:id="@+id/btn_search1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toLeftOf="@+id/btn_search2"
                android:includeFontPadding="false"
                android:text="优惠券"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/item_background3"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14" />
            <Switch
                android:id="@+id/btn_search2"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:tag="0"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_12"
                android:switchMinWidth="20dp"
                app:clickview="@{(view)->activity.onCheckedChanged(view)}"
                android:thumb="@drawable/switch_ios_thumb"
                android:track="@drawable/switch_ios_track_selector" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_f2f2f2"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"/>

        <com.github.jdsjlzx.recyclerview.LRecyclerView
            android:id="@+id/lv_search_results"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" />

        <include
            android:id="@+id/empty_view"
            layout="@layout/not_data_xml"
            android:visibility="gone" />

    </LinearLayout>
</layout>