<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />
        <variable
            name="activity"
            type="com.hpkj.sheplive.activity.ShopSubActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.hjq.bar.TitleBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_top_height"
            app:title="--" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_top_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

<!--                    <androidx.appcompat.widget.AppCompatImageView-->
<!--                        android:layout_width="30dp"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:background="@color/transparent"-->
<!--                        android:padding="10dp"-->
<!--                        android:src="@mipmap/ico_left_g"-->
<!--                        app:clickview="@{(view)->activity.clickExit(view)}" />-->


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="29dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/sertch_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/search_bg_red_15radius"
                            android:drawableLeft="@mipmap/search_small2"
                            android:drawablePadding="6dp"
                            android:ellipsize="end"
                            android:hint="搜索本店商品"
                            android:imeOptions="actionSearch"
                            android:paddingLeft="9dp"
                            android:paddingTop="1dp"
                            android:paddingRight="@dimen/dp_10"
                            android:singleLine="true"
                            android:textColor="@color/color_333333"
                            android:textColorHint="@color/color_B2B2B2"
                            android:textSize="@dimen/txt_size_12" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/ser_bu_bg"
                            android:gravity="center"
                            android:paddingLeft="13dp"
                            android:paddingRight="16dp"
                            android:text="搜索"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_size_12"
                            app:clickview="@{(view)->activity.clickSearch(view)}"
                            app:layout_constraintRight_toRightOf="parent"
                            tools:ignore="MissingConstraints" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

        <com.hpkj.sheplive.mvp.view.NoSlidingViewPager
            android:id="@+id/mviewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" />

    </LinearLayout>
</layout>