<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fragment"
            type="com.hpkj.sheplive.fragment.VipFragment" />

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.VipGoodsBean" />


        <import type="android.view.View" />

        <variable
            name="positon"
            type="Integer" />

    </data>


    <LinearLayout
        clickview='@{(view)->click.toVipGoodsDetail(view,data.id)}'
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="116dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_vip_pic"
                android:layout_width="match_parent"
                app:url="@{data.picture}"
                app:imgmoren="@{@drawable/bg_empty}"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/bg_empty"
                app:riv_mutate_background="true" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sy_item_bg"
            android:paddingLeft="7dp"
            android:paddingTop="10dp"
            android:paddingRight="7dp"
            android:paddingBottom="6dp">

            <com.example.myapplication.view.MytextView
                android:id="@+id/tv_sp_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:minLines="2"
                android:text='@{data.name??"",default="--"}'
                android:textColor="@color/color_333333"
                android:textSize="@dimen/txt_size_13"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.example.myapplication.view.MytextView
                android:id="@+id/tv_sp_title_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:background="@drawable/discount_coupon_back"
                android:paddingLeft="@dimen/dp_4"
                android:paddingRight="@dimen/dp_4"
                android:text="购买即送超级VIP!"
                android:textColor="@color/color_E8541E"
                android:textSize="@dimen/sp_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_sp_title" />


            <com.example.myapplication.view.MytextView
                android:id="@+id/item_price_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text='@{data.price==null?"-.--":data.price,default="¥0.00"}'
                android:textColor="@color/color_d81e07"
                android:textSize="@dimen/txt_size_16"
                app:layout_constraintTop_toBottomOf="@+id/tv_sp_title_small"
                tools:ignore="MissingConstraints" />

            <com.example.myapplication.view.MytextView
                android:id="@+id/item_price_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:maxLines="2"
                android:text='@{data.sales==0?"已售0件":"已售"+data.sales+"件",default="已售0件"}'
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_12"
                app:layout_constraintBottom_toBottomOf="@id/item_price_1"
                app:layout_constraintRight_toRightOf="parent"
                tools:ignore="MissingConstraints" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>