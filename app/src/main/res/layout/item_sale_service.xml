<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="activity"
            type="com.hpkj.sheplive.activity.SaleServiceActivity" />

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />

        <variable
            name="positon"
            type="Integer" />

        <import type="android.view.View" />

        <variable
            name="type"
            type="Integer" />

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/btn_nullborder_white"
            android:orientation="vertical">

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15" />

            <LinearLayout
                android:id="@+id/sp_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <com.example.myapplication.view.MytextView
                android:id="@+id/tv_refund_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:drawableLeft="@mipmap/tksucess"
                android:textSize="@dimen/txt_size_14"
                android:textColor="@color/color_08BD0B"
                android:visibility="gone"
                android:text=" 退款成功" />

            <com.example.myapplication.view.MytextView
                android:id="@+id/tv_refund_ing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:drawableLeft="@mipmap/tking"
                android:textSize="@dimen/txt_size_14"
                android:textColor="@color/color_E73C39"
                android:visibility="visible"
                android:text=" 退款申请中" />

            <Button
                android:id="@+id/btn_refund_detail"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="right"
                android:text="查看详情"
                android:textSize="@dimen/sp_12"
                android:background="@drawable/btn_circle15_color"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_15" />

        </LinearLayout>

    </LinearLayout>
</layout>