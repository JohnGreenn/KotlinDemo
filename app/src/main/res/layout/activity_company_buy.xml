<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="com.hpkj.sheplive.activity.CompanyBuyActivity" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f2f2f2"
        tools:context="com.hpkj.sheplive.activity.CompanyBuyActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/com_pic"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        
        <ImageButton
            android:id="@+id/im_back"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/back_white"
            android:background="@null"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_30"
            app:clickview="@{(view)->activity.onClick(view)}"/>
        
        <Button
            android:id="@+id/btn_com_buy"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="88/年 立即开通"
            android:background="@drawable/btn_circle_small"
            android:textSize="@dimen/txt_size_15"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:clickview="@{(view)->activity.onClick(view)}"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
