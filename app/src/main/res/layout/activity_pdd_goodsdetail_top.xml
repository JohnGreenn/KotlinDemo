<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="com.hpkj.sheplive.activity.PddGoodDetailActivity" />

        <import type="android.view.View" />

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.SpBean" />


        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />

        <variable
            name="tgfy"
            type="Float" />

<!--        <variable-->
<!--            name="shopinfo"-->
<!--            type="com.hpkj.sheplive.entity.ShopInfoBeanX" />-->

        <import type="android.text.Html" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/goodsdetail_banner"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                app:image_scale_type="fit_xy"
                app:indicator_drawable_selected="@mipmap/circle_red"
                app:indicator_drawable_unselected="@mipmap/circle_white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="详情"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/txt_size_11"
                    android:visibility="gone" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/quan_ico"
                    android:layout_width="41dp"
                    android:layout_height="@dimen/dp_18"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/bg_red_8radius"
                    android:gravity="center"
                    android:padding="@dimen/dp_1"
                    android:text="券后价"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_12" />

                <LinearLayout
                    android:id="@+id/txt12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toRightOf="@+id/quan_ico"
                    android:gravity="center_vertical|bottom">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:paddingTop="@dimen/dp_5"
                        android:text="¥"
                        android:textColor="@color/color_FF4A4E"
                        android:textSize="@dimen/txt_size_12" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:paddingTop="@dimen/dp_5"
                        android:text='@{click.spqhj(data)}'
                        android:textColor="@color/color_FF4A4E"
                        android:textSize="20sp"
                        tools:text="-" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_price_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_marginTop="19dp"
                    android:layout_toRightOf="@+id/txt12"
                    android:text='@{"现价¥"+data.zk_final_price}'
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/txt_size_12"
                    tools:text="--" />
<!--                android:text='@{"现价¥"+click.jdshopyj(data)}'-->

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="19dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text='@{"已售"+data.volume,default="--"}'
                    android:textColor="@color/color_9A9A9A"
                    android:textSize="@dimen/txt_size_11" />

                <com.example.myapplication.view.MytextView
                    android:id="@+id/tv_gooods_type"
                    android:layout_width="38dp"
                    android:layout_height="@dimen/dp_15"
                    android:layout_below="@+id/quan_ico"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:background="@drawable/bg_red_3radius"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="拼多多"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_11" />

                <com.example.myapplication.view.MytextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/quan_ico"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginRight="130dp"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:paddingLeft="2dp"
                    android:text='@{click.sptitle(data,3)}'
                    android:textColor="@color/color_010101"
                    android:textSize="@dimen/txt_size_14"
                    tools:text="           -" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_below="@+id/tv_sale"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/bg_pink_10radius"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <com.example.myapplication.view.MytextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="佣金:"
                        android:textColor="@color/color_FF4A4E"
                        android:textSize="@dimen/txt_size_13" />

                    <com.example.myapplication.view.MytextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="¥"
                        android:textColor="@color/color_FF4A4E"
                        android:textSize="@dimen/txt_size_11" />

                    <com.example.myapplication.view.MytextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text='@{click.spbonus(data,tgfy)}'
                        android:textColor="@color/color_FF4A4E"
                        android:textSize="@dimen/txt_size_14"
                        tools:text="0.00" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@mipmap/bg_jd_coupon"
                android:visibility="@{click.couponshow(data)?View.VISIBLE:View.GONE,default=visible}"
                app:clickview="@{(view)->activity.onClick(view)}">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_rmb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="¥"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_15" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_coupon_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_rmb"
                    android:text="@{click.couponamount(data)}"
                    tools:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_24" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_yhq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_toRightOf="@+id/tv_coupon_value"
                    android:text="优惠券"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_13" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_stime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_yhq"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/tv_coupon_value"
                    android:text='@{data.coupon_start_time}'
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_12" />
<!--                android:text='@{click.jdzyqstartTime(data,1),default="&#45;&#45;"}'-->

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_yhq"
                    android:layout_toRightOf="@+id/tv_stime"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_12" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_yhq"
                    android:layout_toRightOf="@+id/tv_line"
                    android:text='@{data.coupon_end_time}'
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_12" />
<!--                android:text='@{click.jdzyqstartTime(data,2),default="&#45;&#45;"}'-->

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_etime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_yhq"
                    android:layout_toRightOf="@+id/tv_center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_12" />
                <!--                    android:text='@{etime,default="&#45;&#45;"}'-->

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="75dp"
                    android:layout_height="33dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_18"
                    android:background="@drawable/bg_white_17radius"
                    android:gravity="center"
                    android:text="立即领券"
                    android:textColor="@color/color_FF4A4E"
                    android:textSize="@dimen/txt_size_13" />

            </RelativeLayout>

            <!--商铺信息-->
            <RelativeLayout
                android:id="@+id/pdd_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@mipmap/bg_shop"
                app:clickview="@{(view)->activity.onClick(view)}">

                <ImageView
                    android:id="@+id/iv_shop_img"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:src="@drawable/app_icon" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_toRightOf="@+id/iv_shop_img"
                    android:text='@{data.shopName,default="--"}'
                    android:textColor="@color/color_343434"
                    android:textSize="@dimen/txt_size_15"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_shop_img"
                    android:layout_below="@+id/tv_shop_name"
                    android:layout_marginTop="@dimen/dp_8">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_dianpu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="宝贝描述"
                        android:textColor="@color/color_9A9A9A"
                        android:textSize="@dimen/txt_size_13" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_toRightOf="@+id/tv_dianpu"
                        android:text='@{data.desc_txt+"",default="--"}'
                        android:textColor="@color/color_FF4A4E"
                        android:textSize="@dimen/txt_size_13" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_serivice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="卖家服务"
                            android:layout_marginRight="@dimen/dp_5"
                            android:textColor="@color/color_9A9A9A"
                            android:textSize="@dimen/txt_size_13" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text='@{data.serv_txt+"",default="--"}'
                            android:textColor="@color/color_FF4A4E"
                            android:textSize="@dimen/txt_size_13" />

                    </LinearLayout>



                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_wuliu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="物流服务"
                        android:layout_toLeftOf="@+id/wuliu_score"
                        android:textColor="@color/color_9A9A9A"
                        android:textSize="@dimen/txt_size_13" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/wuliu_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_10"
                        android:text='@{data.lgst_txt+"",default="--"}'
                        android:textColor="@color/color_FF4A4E"
                        android:textSize="@dimen/txt_size_13" />

                </RelativeLayout>



            </RelativeLayout>

            <View
                style="@style/line_horizontal"
                android:layout_height="2.5dp"
                android:background="@color/color_f3f3f3" />

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:drawableLeft="@mipmap/red_rectangle"
                android:drawablePadding="@dimen/dp_6"
                android:text="更多抢购"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/txt_size_14" />

        </LinearLayout>
    </LinearLayout>
</layout>