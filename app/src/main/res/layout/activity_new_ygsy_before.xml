<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.YgsyBeforeActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sy_bg">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_top_height"
                android:layout_marginTop="@dimen/status_bar_height">

                <ImageButton
                    android:id="@+id/ib_back"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:src="@drawable/ico_left" />

                <com.example.myapplication.view.MytextView
                    android:id="@+id/toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="--"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_17" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <com.example.myapplication.view.MytextView
                    android:id="@+id/tv_sy_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_FDFF73"
                    android:textSize="@dimen/txt_size_24" />

                <com.example.myapplication.view.MytextView
                    android:id="@+id/tv_sy_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="收益"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_12" />

            </LinearLayout>

        </RelativeLayout>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="-20dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_one"
                style="@style/radiobtnygsy"
                android:layout_weight="1"
                android:checked="true"
                android:text="淘宝" />

            <RadioButton
                android:id="@+id/radio_two"
                style="@style/radiobtnygsy"
                android:layout_weight="1"
                android:text="京东" />

            <RadioButton
                android:id="@+id/radio_three"
                style="@style/radiobtnygsy"
                android:layout_weight="1"
                android:text="拼多多" />

            <RadioButton
                android:id="@+id/radio_four"
                style="@style/radiobtnygsy"
                android:layout_weight="1"
                android:text="自营商城" />



        </RadioGroup>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/ygsyviewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10" />
    </LinearLayout>
</layout>