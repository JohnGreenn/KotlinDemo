<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activity"
            type="com.hpkj.sheplive.activity.EditAddressActivity" />

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.EditAddressBean" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.hjq.bar.TitleBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_top_height"
            app:title="编辑收货地址" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">

            <com.hjq.widget.view.ClearEditText
                android:id="@+id/add_address_name"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:singleLine="true" />

            <View
                style="@style/HorizontalLineStyle"
                android:layout_gravity="bottom" />

            <com.hjq.widget.view.ClearEditText
                android:id="@+id/et_phone"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:inputType="textVisiblePassword"
                android:singleLine="true" />

            <View
                style="@style/HorizontalLineStyle"
                android:layout_gravity="bottom" />

            <com.example.myapplication.view.MytextView
                android:id="@+id/sb_person_data_address"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:clickview="@{(view)->activity.onClick(view)}" />

            <com.hjq.widget.view.ClearEditText
                android:id="@+id/detail_address"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:clickview="@{(view)->activity.onClick(view)}" />

            <View
                style="@style/HorizontalLineStyle"
                android:layout_gravity="bottom" />

            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/add_sure"
                android:layout_width="match_parent"
                android:layout_height="37.5dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_15"
                android:background="@drawable/btn_common"
                android:text="确认"
                app:clickview="@{(view)->activity.onClick(view)}" />

        </LinearLayout>

    </LinearLayout>
</layout>