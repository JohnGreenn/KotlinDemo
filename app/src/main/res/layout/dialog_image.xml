<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/txt_3"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:background="@drawable/banner_frame"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_message_cancel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:ignore="MissingConstraints">

            <com.example.myapplication.view.MytextView
                android:id="@id/txt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您是否搜索以下商品"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/txt_size_13"
                tools:ignore="MissingConstraints" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_img"
                android:layout_width="match_parent"
                android:layout_height="264dp"
                android:layout_marginTop="@dimen/dp_10"
                android:scaleType="fitXY"
                android:src="@drawable/bg_empty"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_1"
                tools:ignore="MissingConstraints" />

            <com.example.myapplication.view.MytextView
                android:id="@+id/tv_message_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/color_5D5D5D"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/iv_img"
                tools:ignore="MissingConstraints"
                tools:text="--" />

            <LinearLayout
                android:id="@id/txt_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_message_message"
                android:layout_marginTop="11dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_message_message">

                <LinearLayout
                    android:id="@+id/ll_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_below="@+id/title"
                    android:gravity="center_vertical"
                    android:background="@drawable/new_conpoun"
                    android:orientation="horizontal">

                    <com.example.myapplication.view.MytextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="券"
                        android:layout_marginLeft="1dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_11" />

                    <com.example.myapplication.view.MytextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="¥"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_12" />

                    <com.example.myapplication.view.MytextView
                        android:id="@+id/get_coupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_13" />

                </LinearLayout>

                <com.example.myapplication.view.MytextView
                    android:id="@+id/share_get"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_below="@+id/get_coupon"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/iv_img"
                    android:background="@drawable/bg_coupon_pink"
                    android:gravity="center"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="分享赚¥999"
                    android:textColor="@color/color_E8541E"
                    android:textSize="@dimen/sp_12"
                    android:visibility="visible" />
            </LinearLayout>

            <com.example.myapplication.view.MytextView
                android:id="@+id/item_price_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="¥100"
                android:textColor="@color/color_d81e07"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@id/tv_message_message"
                app:layout_constraintTop_toBottomOf="@id/txt_2" />

            <com.example.myapplication.view.MytextView
                android:id="@+id/item_price_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/item_price_1"
                android:text="¥100"
                android:textColor="@color/color_666666"
                android:textSize="12sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/item_price_1"
                app:layout_constraintLeft_toRightOf="@+id/item_price_1" />

            <com.example.myapplication.view.MytextView
                android:id="@+id/tv_message_confirm"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="18dp"
                android:layout_weight="1"
                android:background="@drawable/bg_red_15radius"
                android:focusable="true"
                android:gravity="center"
                android:text="查看详情"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_13"
                app:layout_constraintTop_toBottomOf="@+id/item_price_2" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.example.myapplication.view.MytextView
            android:id="@+id/tv_message_cancel"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/ico_tc_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/txt_3"
            app:layout_constraintRight_toRightOf="@id/txt_3"
            app:layout_constraintTop_toBottomOf="@id/txt_3"
            app:layout_constraintVertical_chainStyle="packed" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>