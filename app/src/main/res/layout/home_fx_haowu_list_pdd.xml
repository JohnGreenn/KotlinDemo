<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.SpBean" />

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />

        <variable
            name="fragmentClick"
            type="com.hpkj.sheplive.fragment.PddHomeFragment" />

        <import type="android.view.View" />

        <variable
            name="tgfy"
            type="Float" />

        <import type="android.text.Html" />

        <variable
            name="positon"
            type="Integer" />

    </data>


    <LinearLayout
        android:layout_width="96dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="86dp"
            android:layout_height="168dp"
            app:clickview='@{(view)->fragmentClick.enterPddGoodsDetail(view,data.item_id)}'>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/round_img"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4.5dp"
                android:src="@drawable/bg_empty"
                app:imgmoren="@{@drawable/bg_empty}"
                app:riv_corner_radius="@dimen/dp_10"
                app:url="@{data.pict_url}" />

            <com.example.myapplication.view.MytextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/round_img"
                android:layout_marginTop="@dimen/dp_6"
                android:ellipsize="end"
                android:maxEms="6"
                android:maxLines="1"
                android:text='@{click.sptitle(data,2)}'
                android:textColor="@color/color_333333"
                android:textSize="@dimen/txt_size_13"
                tools:text="--" />

            <LinearLayout
                android:id="@+id/ll_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@drawable/bg_coupon_1radius"
                android:orientation="horizontal"
                >
                <!--                android:visibility="@{click.jdifQ(data)?View.VISIBLE:View.INVISIBLE,default=visible}"-->

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:text="券"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_11" />

                <View
                    android:id="@+id/view"
                    android:layout_width="5dp"
                    android:layout_height="@dimen/dp_17"
                    android:background="@drawable/vertical_line">

                </View>

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_11" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text='@{click.couponamount(data)}'
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_13"
                    tools:text="0" />

            </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tv_original_price_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_coupon"
                android:layout_marginTop="@dimen/dp_5">

                <com.example.myapplication.view.MytextView
                    android:id="@+id/tv_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{data.zk_final_price==null?"¥-.--":"¥"+data.zk_final_price+" "}'
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/txt_size_11"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="¥0.00" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/color_999999"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_txt"
                    app:layout_constraintRight_toRightOf="@+id/tv_txt"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/ll_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_original_price_"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <com.example.myapplication.view.MytextView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_red_2radius"
                    android:gravity="center"
                    android:text="抢"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_12" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:text="¥"
                    android:textColor="@color/color_FF4A4D"
                    android:textSize="@dimen/txt_size_11" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{click.spqhj(data)}'
                    android:textColor="@color/color_FF4A4D"
                    android:textSize="@dimen/txt_size_14"
                    tools:text="-" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</layout>