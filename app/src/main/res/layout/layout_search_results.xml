<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.hpkj.sheplive.fragment.SearchResultsFragment" />

        <variable
            name="click"
            type="com.hpkj.sheplive.fragment.SearchResultsFragment" />

        <variable
            name="flg"
            type="Integer" />

        <import type="android.view.View" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="left|center">

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_12"
                android:gravity="center_vertical"
                android:text="搜索渠道"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/txt_size_12" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">

                <!--商城-->
                <LinearLayout
                    android:id="@+id/ll_sc"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_22"
                    android:orientation="vertical">

                    <com.example.myapplication.view.MytextView
                        android:id="@+id/radio_sc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_17"
                        android:background="@null"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="商城"
                        android:textColor='@{flg==2?@color/color_FF4A4D:@color/color_333333,default=@color/color_333333}'
                        app:clickview="@{(view)->click.onClick(view)}" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_6"
                        android:src="@mipmap/red_rect"
                        android:visibility='@{flg==2?View.VISIBLE:View.INVISIBLE,default=visible}' />

                </LinearLayout>

                <!--淘宝-->
                <LinearLayout
                    android:id="@+id/ll_tb"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.example.myapplication.view.MytextView
                        android:id="@+id/radio_tabao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_17"
                        android:background="@null"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="淘宝"
                        android:textColor='@{flg==0?@color/color_FF4A4D:@color/color_333333,default=@color/color_333333}'
                        app:clickview="@{(view)->click.onClick(view)}" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_6"
                        android:src="@mipmap/red_rect"
                        android:visibility='@{flg==0?View.VISIBLE:View.INVISIBLE,default=visible}' />

                </LinearLayout>
                <!--京东-->
                <LinearLayout
                    android:id="@+id/ll_jd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:orientation="vertical">

                    <com.example.myapplication.view.MytextView
                        android:id="@+id/radio_jd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_17"
                        android:background="@null"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="京东"
                        android:textColor='@{flg==1?@color/color_FF4A4D:@color/color_333333,default=@color/color_333333}'
                        app:clickview="@{(view)->click.onClick(view)}" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_6"
                        android:src="@mipmap/red_rect"
                        android:visibility='@{flg==1?View.VISIBLE:View.INVISIBLE,default=visible}' />

                </LinearLayout>
                <!--拼多多-->
                <LinearLayout
                    android:id="@+id/ll_pdd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:orientation="vertical">

                    <com.example.myapplication.view.MytextView
                        android:id="@+id/radio_pdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_17"
                        android:background="@null"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="拼多多"
                        android:textColor='@{flg==3?@color/color_FF4A4D:@color/color_333333,default=@color/color_333333}'
                        app:clickview="@{(view)->click.onClick(view)}" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_6"
                        android:src="@mipmap/red_rect"
                        android:visibility='@{flg==3?View.VISIBLE:View.INVISIBLE,default=visible}' />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/color_f2f2f2" />

        <com.hjq.widget.layout.NoScrollViewPager
            android:id="@+id/goodslistviewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</layout>