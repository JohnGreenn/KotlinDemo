<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_5"
        android:orientation="vertical">


        <ImageView
            android:id="@id/img_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/up_half_circle"
            app:layout_constraintLeft_toLeftOf="@+id/mtv_title"
            app:layout_constraintRight_toRightOf="@+id/mtv_title" />

        <com.example.myapplication.view.MytextView
            android:id="@+id/mtv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="热销榜单"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_16"
            app:layout_constraintTop_toBottomOf="@id/img_1" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>