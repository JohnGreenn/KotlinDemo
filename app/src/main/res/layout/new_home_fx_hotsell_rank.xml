<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.ShopGoodsListBean" />

        <import type="android.text.Html" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/homefx_frame_10radius"
        app:clickview="@{(view)->click.showShopGoodsDetail(view,data.id)}">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_img"
            android:layout_width="107dp"
            android:layout_height="107dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_empty"
            app:imgmoren="@{@drawable/bg_empty}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="@dimen/dp_5"
            app:url="@{data.resUrl}" />


        <com.example.myapplication.view.MytextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:ellipsize="end"
            android:maxLines="2"
            android:text='@{data.goodName==null?"":data.goodName,default="--"}'
            android:textColor="@color/color_333333"
            android:textSize="@dimen/txt_size_14"
            app:layout_constraintLeft_toRightOf="@+id/item_img"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_img"
            tools:text="标题标题标题标题标题标题标题标题标题标题标题标题标题标题" />


        <com.example.myapplication.view.MytextView
            android:id="@+id/tv_buyer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_8"
            android:text='@{"销量："+data.showSalesVolume,default="销量：--"}'
            android:textColor="@color/color_999999"
            android:textSize="@dimen/txt_size_11"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/txt_5"
            app:layout_constraintLeft_toRightOf="@id/item_img"
            tools:text="销量：--" />

        <com.example.myapplication.view.MytextView
            android:id="@id/txt_5"
            android:layout_width="16dp"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/bg_red_2radius"
            android:text="尊"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_12"
            android:layout_marginBottom="6.5dp"
            app:layout_constraintBottom_toTopOf="@id/txt_biao"
            app:layout_constraintLeft_toRightOf="@id/item_img"/>


        <com.example.myapplication.view.MytextView
            android:id="@id/txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="5dp"
            android:text='@{click.getUserMems()>2?"¥":""}'
            android:textColor="@color/color_FF4A4D"
            android:textSize="@dimen/txt_size_11"
            app:layout_constraintBottom_toTopOf="@id/txt_biao"
            app:layout_constraintLeft_toRightOf="@+id/txt_5" />

        <com.example.myapplication.view.MytextView
            android:id="@id/txt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{click.finalprice(1,data),default="-"}'
            android:textColor="@color/color_FF4A4D"
            android:textSize="@dimen/txt_size_16"
            app:layout_constraintBaseline_toBaselineOf="@id/txt_1"
            app:layout_constraintLeft_toRightOf="@id/txt_1"
            tools:text="0.00" />



        <com.example.myapplication.view.MytextView
            android:id="@+id/txt_biao"
            android:layout_width="16dp"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="4dp"
            android:background="@drawable/bg_orange_2radius"
            android:text="标"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_11"
            app:layout_constraintBottom_toBottomOf="@+id/item_img"
            app:layout_constraintLeft_toRightOf="@id/item_img"
            />

        <com.example.myapplication.view.MytextView
            android:id="@id/txt_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="¥"
            android:layout_marginBottom="2dp"
            android:textColor="#FF9024"
            android:textSize="@dimen/txt_size_11"
            app:layout_constraintBottom_toBottomOf="@+id/item_img"
            app:layout_constraintStart_toEndOf="@id/txt_biao" />

        <com.example.myapplication.view.MytextView
            android:id="@+id/txt_44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{click.finalprice(2,data),default="-"}'
            android:textColor="#FF9024"
            android:textSize="@dimen/txt_size_16"
            app:layout_constraintBaseline_toBaselineOf="@id/txt_4"
            app:layout_constraintStart_toEndOf="@id/txt_4"
            tools:text="0.00" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/orginal_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_size_11"
            android:textColor="@color/color_999999"
            android:text='@{"¥"+data.price+"",default="¥0.00"}'
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_4"
            app:layout_constraintLeft_toRightOf="@+id/txt_44"
            android:layout_marginLeft="@dimen/dp_11"
            tools:text="¥0.00"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/color_999999"
            app:layout_constraintBottom_toBottomOf="@+id/orginal_price"
            app:layout_constraintLeft_toLeftOf="@+id/orginal_price"
            app:layout_constraintRight_toRightOf="@+id/orginal_price"
            app:layout_constraintTop_toTopOf="@+id/orginal_price" />

        <com.example.myapplication.view.MytextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@mipmap/home_fx_btn"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>