<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.SpBean" />

        <import type="android.view.View" />

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />

        <variable
            name="tgfy"
            type="Float" />

        <import type="android.text.Html" />



        <variable
            name="share"
            type="com.hpkj.sheplive.entity.JdShareBean" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/haibao_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/haibao_img"
                android:layout_width="match_parent"
                android:layout_height="375dp"
                app:riv_corner_radius_top_left="2dp"
                app:riv_corner_radius_top_right="2dp"
                app:url="@{data.pict_url}" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.myapplication.view.MytextView
                    android:id="@+id/tv_gooods_type"
                    android:layout_width="40dp"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/bg_red_7radius"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="淘宝"
                    android:layout_marginTop="@dimen/dp_14"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_11"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.example.myapplication.view.MytextView
                    android:id="@+id/haibao_title"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="17dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:minLines="2"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_14"
                    android:text='@{data.title==null?"":Html.fromHtml(String.format(@string/item_kx_stock,data.title)),default="          -"}'
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/txt_size_13"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="             商品名称商品名称商品名称商品名称商品名称商品名称商品名称" />


            </androidx.constraintlayout.widget.ConstraintLayout>

<!--            <androidx.appcompat.widget.AppCompatTextView-->
<!--                android:id="@+id/haibao_title"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginLeft="5dp"-->
<!--                android:layout_marginTop="@dimen/dp_14"-->
<!--                android:layout_marginRight="@dimen/dp_10"-->
<!--                android:maxLines="2"-->
<!--                android:minLines="2"-->
<!--                android:text='@{data.skuName}'-->
<!--                android:textColor="@color/color_333333"-->
<!--                android:textSize="@dimen/txt_size_14"-->
<!--                tools:text="商品名称商品名称商品名称商品名称商品名称商品名称商品名称" />-->

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:text="券后价: ¥"
                android:textColor="@color/color_FF4A4D"
                android:textSize="@dimen/txt_size_12" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_txt2"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_txt"
                android:layout_toRightOf="@+id/tv_txt"
                android:text='@{click.spqhj(data)}'
                android:textColor="@color/color_FF4A4D"
                android:textSize="@dimen/txt_size_18" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@+id/tv_txt2">

                <com.example.myapplication.view.MytextView
                    android:id="@+id/haibao_yuanjia"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text='@{"¥" +data.zk_final_price+""}'
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/txt_size_12"
                    tools:ignore="MissingConstraints"
                    tools:text="¥--" />

                <!--                    <View-->
                <!--                        android:layout_width="0dp"-->
                <!--                        android:layout_height="1dp"-->
                <!--                        android:background="@color/color_cccccc"-->
                <!--                        app:layout_constraintBottom_toBottomOf="@+id/haibao_yuanjia"-->
                <!--                        app:layout_constraintLeft_toLeftOf="@+id/haibao_yuanjia"-->
                <!--                        app:layout_constraintRight_toRightOf="@+id/haibao_yuanjia"-->
                <!--                        app:layout_constraintTop_toTopOf="@+id/haibao_yuanjia" />-->
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/ll_haibao_quan"
                android:layout_width="108dp"
                android:layout_height="@dimen/dp_30"
                android:layout_below="@+id/tv_txt"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@mipmap/goods_btn_coupon"
                android:orientation="horizontal"
                android:visibility="@{click.couponshow(data)?View.VISIBLE:View.GONE,default=visible}">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="9.5dp"
                    android:text="券"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:text="¥"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_11" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/haibao_quan"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:text='@{click.couponamount(data),default="0"}'
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_14"
                    tools:text="100" />

            </LinearLayout>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/f_img"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_below="@+id/ll_haibao_quan"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:src="@drawable/bg_empty"
                app:imgmoren="@{@drawable/bg_empty}"
                app:riv_corner_radius="360dp"
                app:url="@{click.getavatar()}" />

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_haibao_quan"
                android:layout_marginLeft="2.5dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="@dimen/dp_7"
                android:layout_toRightOf="@+id/f_img"
                android:maxLines="1"
                android:text='@{"好友"+click.getnickName()+"推荐"}'
                android:textColor="@color/color_666666"
                android:textSize="@dimen/txt_size_11"
                tools:text="好友-----------------------------推荐" />

            <ImageView
                android:id="@+id/haibao_codeimg"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:src="@drawable/bg_empty"
                app:ewmurl="@{share.shortURL}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/haibao_codeimg"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="32dp"
                android:text="扫码识别"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/txt_size_12" />

        </RelativeLayout>

    </LinearLayout>
</layout>