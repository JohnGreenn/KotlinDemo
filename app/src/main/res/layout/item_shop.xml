<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.ShopGoodsListBean" />


        <import type="android.view.View" />

        <import type="android.text.Html" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_wntj_bg"
        android:paddingBottom="14dp"
        app:clickview="@{(view)->click.showShopGoodsDetail(view,data.id)}">

        <androidx.constraintlayout.widget.Guideline
            android:id="@id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="7dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="7dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_img"
            android:layout_width="match_parent"
            android:layout_height="172dp"
            tools:ignore="MissingConstraints">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/home_item_img"
                android:layout_width="match_parent"
                android:layout_height="174dp"
                android:scaleType="fitXY"
                android:src="@drawable/bg_empty"
                app:imgmoren="@{@drawable/bg_empty}"
                app:riv_corner_radius_top_left="10dp"
                app:riv_corner_radius_top_right="10dp"
                app:url="@{data.resUrl}"
                tools:ignore="MissingConstraints" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.example.myapplication.view.MytextView
            android:id="@id/txt_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:maxLines="2"
            android:minLines="2"
            android:text='@{data.goodName==null?"":data.goodName,default="--"}'
            android:textColor="@color/color_333333"
            android:textSize="@dimen/txt_size_14"
            app:layout_constraintLeft_toLeftOf="@id/guideline"
            app:layout_constraintRight_toRightOf="@id/guideline1"
            app:layout_constraintTop_toBottomOf="@+id/cons_img"
            tools:ignore="MissingConstraints" />

        <!--积分抵扣和分享赚-->
        <LinearLayout
            android:id="@+id/ll_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility='@{data.showShareAndCredit?View.VISIBLE:View.GONE,default=visible}'
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/txt_1">


            <!-- 积分抵-->
            <LinearLayout
                android:id="@+id/ll_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/bg_red_1radius"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingLeft="2dp"
                android:paddingTop="1dp"
                android:paddingRight="2dp"
                android:paddingBottom="1dp">

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="积分抵"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_11" />


                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_10" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:text='@{data.creditPrice+"",default="0"}'
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_12" />

            </LinearLayout>

            <!--分享赚-->
            <LinearLayout
                android:id="@+id/txt_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/bg_pink_1radius"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingLeft="2dp"
                android:paddingTop="1dp"
                android:paddingRight="2dp"
                android:paddingBottom="1dp">

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="赚"
                    android:textColor="@color/color_FF4A4D"
                    android:textSize="@dimen/txt_size_11" />


                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/color_FF4A4D"
                    android:textSize="@dimen/txt_size_10" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:text='@{data.sharePrice+"",default="0"}'
                    android:textColor="@color/color_FF4A4D"
                    android:textSize="@dimen/txt_size_12" />

            </LinearLayout>



        </LinearLayout>

