        <com.example.myapplication.view.MytextView
            android:id="@id/txt_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:text="¥"
            android:textColor="@color/color_d81e07"
            android:textSize="@dimen/txt_size_11"
            app:layout_constraintBaseline_toBaselineOf="@id/txt_2"
            app:layout_constraintLeft_toRightOf="@id/guideline" />

        <com.example.myapplication.view.MytextView
            android:id="@id/txt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text='@{data.priceVip+"",default="0.00"}'
            android:textColor="#ff4a4D"
            android:textSize="@dimen/txt_size_16"
            app:layout_constraintLeft_toRightOf="@id/txt_3"
            app:layout_constraintTop_toBottomOf="@+id/ll_show" />

        <com.example.myapplication.view.MytextView
            android:id="@+id/tv_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="6.5dp"
            android:text='@{"¥"+data.price+"",default="¥0.00"}'
            android:textColor="@color/color_999999"
            android:textSize="@dimen/txt_size_11"
            app:layout_constraintBaseline_toBaselineOf="@id/txt_2"
            app:layout_constraintLeft_toRightOf="@id/txt_2"
            app:layout_constraintTop_toBottomOf="@+id/ll_show" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/color_999999"
            app:layout_constraintBottom_toBottomOf="@+id/tv_txt"
            app:layout_constraintLeft_toLeftOf="@+id/tv_txt"
            app:layout_constraintRight_toRightOf="@+id/tv_txt"
            app:layout_constraintTop_toTopOf="@+id/tv_txt" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_7"
            android:background="@mipmap/btn_homefx_qiang"
            android:gravity="center"
            android:text="购"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_live_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxEms="8"
            android:padding="8dp"
            android:singleLine="true"
            android:visibility="gone"
            android:text='@{"已售"+data.showSalesVolume+"件",default="已售-件"}'
            android:textColor="@color/color_666666"
            android:textSize="@dimen/txt_size_12"
            app:layout_constraintRight_toLeftOf="@id/shop"
            app:layout_constraintBottom_toBottomOf="parent" />

