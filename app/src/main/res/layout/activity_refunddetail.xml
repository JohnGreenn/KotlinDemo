<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.RefundDetailBean" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.hjq.bar.TitleBar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_top_height"
                app:title="退款详情" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.example.myapplication.view.MytextView
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:layout_marginLeft="23dp"
                        android:background="@drawable/yellow_circle" />


                </LinearLayout>

            </LinearLayout>

            <!--            退款申请中-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cons_refunding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <com.example.myapplication.view.MytextView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginLeft="23dp"
                    android:background="@drawable/yellow_circle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.example.myapplication.view.MytextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="发起退款 待商家受理"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/txt_size_15"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text='@{data.applytime}'
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/txt_size_11"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--            退款成功-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cons_refundsuccess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <com.example.myapplication.view.MytextView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="47dp"
                    android:background="@drawable/yellow_circle"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.example.myapplication.view.MytextView
                    android:id="@+id/txt11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="商家已处理：已同意"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/txt_size_15"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.example.myapplication.view.MytextView
                    android:id="@+id/txt22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text='@{data.business_time}'
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/txt_size_11"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt11" />

                <com.example.myapplication.view.MytextView
                    android:id="@+id/txt33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="我们将第一时间退款给您"
                    android:textColor="@color/color_9C9C9C"
                    android:textSize="@dimen/txt_size_14"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt22" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginLeft="23dp"
                    android:layout_marginBottom="35dp"
                    android:background="@drawable/gray_small_circle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />


                <com.example.myapplication.view.MytextView
                    android:id="@+id/txt111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="发起退款 待商家受理"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/txt_size_15"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt33" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text='@{data.applytime}'
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/txt_size_11"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt111" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/color_f6f6f6" />

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="退款信息"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/txt_size_16" />

            <LinearLayout
                android:id="@+id/sp_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.myapplication.view.MytextView
                    android:id="@+id/txt_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="13dp"
                    android:text="订单原因："
                    android:textColor="@color/color_7D7D7D"
                    android:textSize="@dimen/txt_size_15"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="13dp"
                    android:text='@{data.reason}'
                    android:textColor="@color/color_7D7D7D"
                    android:textSize="@dimen/txt_size_15"
                    app:layout_constraintLeft_toRightOf="@+id/txt_reason"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.example.myapplication.view.MytextView
                    android:id="@+id/txt_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="10dp"
                    android:text="退款金额："
                    android:textColor="@color/color_7D7D7D"
                    android:textSize="@dimen/txt_size_15"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_reason" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="10dp"
                    android:text='@{data.applyprice}'
                    android:textColor="@color/color_7D7D7D"
                    android:textSize="@dimen/txt_size_15"
                    app:layout_constraintLeft_toRightOf="@+id/txt_reason"
                    app:layout_constraintTop_toBottomOf="@+id/txt_reason" />

                <com.example.myapplication.view.MytextView
                    android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="10dp"
                    android:text="申请时间："
                    android:textColor="@color/color_7D7D7D"
                    android:textSize="@dimen/txt_size_15"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_money" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="10dp"
                    android:text='@{data.applytime}'
                    android:textColor="@color/color_7D7D7D"
                    android:textSize="@dimen/txt_size_15"
                    app:layout_constraintLeft_toRightOf="@+id/txt_reason"
                    app:layout_constraintTop_toBottomOf="@+id/txt_money" />

                <com.example.myapplication.view.MytextView
                    android:id="@+id/txt_com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="10dp"
                    android:text="物流公司："
                    android:textColor="@color/color_7D7D7D"
                    android:textSize="@dimen/txt_size_15"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_time" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="10dp"
                    android:text='@{data.expresscom??"",default="无"}'
                    android:textColor="@color/color_7D7D7D"
                    android:textSize="@dimen/txt_size_15"
                    app:layout_constraintLeft_toRightOf="@+id/txt_reason"
                    app:layout_constraintTop_toBottomOf="@+id/txt_time" />

                <com.example.myapplication.view.MytextView
                    android:id="@+id/txt_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="10dp"
                    android:text="物流单号："
                    android:textColor="@color/color_7D7D7D"
                    android:textSize="@dimen/txt_size_15"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_com" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="10dp"
                    android:text='@{data.expresssn??"",default="无"}'
                    android:textColor="@color/color_7D7D7D"
                    android:textSize="@dimen/txt_size_15"
                    app:layout_constraintLeft_toRightOf="@+id/txt_reason"
                    app:layout_constraintTop_toBottomOf="@+id/txt_com" />

                <com.example.myapplication.view.MytextView
                    android:id="@+id/txt_explain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="10dp"
                    android:text="退款说明："
                    android:textColor="@color/color_7D7D7D"
                    android:textSize="@dimen/txt_size_15"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_code" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="10dp"
                    android:text='@{data.content}'
                    android:textColor="@color/color_7D7D7D"
                    android:textSize="@dimen/txt_size_15"
                    app:layout_constraintLeft_toRightOf="@+id/txt_reason"
                    app:layout_constraintTop_toBottomOf="@+id/txt_code" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/color_f6f6f6" />

            <LinearLayout
                android:id="@+id/ll_fact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="凭证"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/txt_size_16" />

                <ImageView
                    android:id="@+id/fact_img"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:contentDescription="TODO"
                    android:src="@drawable/bg_empty" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>