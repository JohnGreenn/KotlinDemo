<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.Studycontentbean" />

        <import type="android.view.View" />

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bg_white_10radius"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="10dp"
        app:clickview="@{(view)->click.toArticleDetail(view,data.post_title,data.published_time,data.post_content,data.media_file_url,data.id,data.media_file_url)}">


        <com.example.myapplication.view.MytextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_12"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lineSpacingExtra="4dp"
            android:maxLines="1"
            android:text='@{data.post_title,default=""}'
            android:textColor="@color/color_333333"
            android:textSize="@dimen/txt_size_16"
            tools:text="--" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginBottom="8dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_sxy"
                android:layout_width="148dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/bg_empty"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_corner_radius="5dp"
                app:url="@{data.thumbnail}" />

            <com.example.myapplication.view.MytextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:ellipsize="end"
                android:maxLines="4"
                android:text='@{click.postcontent(data.post_excerpt)}'
                android:textColor="@color/color_666666"
                android:textSize="@dimen/txt_size_14"
                app:layout_constraintLeft_toRightOf="@+id/iv_sxy"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="--" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:drawableLeft="@mipmap/question_see"
                android:drawablePadding="3dp"
                android:text='@{data.post_hits+""}'
                android:textColor="@color/color_666666"
                android:textSize="@dimen/txt_size_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/iv_sxy"
                tools:text="--" />

            <com.example.myapplication.view.MytextView
                android:layout_width="@dimen/dp_70"
                android:layout_height="27dp"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/bg_red_15radius"
                android:drawableLeft="@mipmap/study_icon"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:text="去学习"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>