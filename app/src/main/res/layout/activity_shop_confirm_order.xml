<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />

        <variable
            name="activity"
            type="com.hpkj.sheplive.activity.ShopConfirmOrderActivity" />

        <variable
            name="datashop"
            type="com.hpkj.sheplive.entity.ShopGoodsDetailBean.ShopInfoBean" />

        <variable
            name="datagood"
            type="com.hpkj.sheplive.entity.ShopGoodsDetailBean.BaseInfoBean" />

        <variable
            name="datajifen"
            type="com.hpkj.sheplive.entity.ShopGoodsDetailBean.CreditDeductionInfoBean" />

        <variable
            name="datanp"
            type="com.hpkj.sheplive.entity.PriceNumBean" />

        <variable
            name="imgurl"
            type="String" />

        <variable
            name="datachange"
            type="com.hpkj.sheplive.entity.PriceNumBean" />

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.AddressDetailBean" />

        <variable
            name="jifenvalue"
            type="Double" />

        <variable
            name="jifenbean"
            type="com.hpkj.sheplive.entity.ConfirmOrderJfBean" />

        <import type="android.view.View" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f2f2f2"
        android:orientation="vertical">

        <com.hjq.bar.TitleBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_top_height"
            app:title="提交订单" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--地址-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cons_address1"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="@drawable/bg_white_5radius"
                        >
<!--                        app:clickview="@{(view)->click.enterMyAddress(view,1,datagood.useAddress,datagood.editAddress)}"-->

                        <com.example.myapplication.view.MytextView
                            android:id="@+id/tv_pay_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="52dp"
                            android:layout_marginTop="20dp"
                            android:ellipsize="end"
                            android:maxEms="11"
                            android:maxLines="1"
                            android:text='@{data.name,default="--"}'
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/txt_size_15"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.example.myapplication.view.MytextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text='@{data.mobile,default="--"}'
                            android:textColor="@color/color_7D7D7D"
                            android:textSize="@dimen/txt_size_12"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tv_pay_name"
                            app:layout_constraintLeft_toRightOf="@+id/tv_pay_name" />

                        <ImageView
                            android:id="@+id/iv_pay_weizhi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_22"
                            android:layout_marginTop="@dimen/dp_10"
                            android:contentDescription="TODO"
                            android:src="@mipmap/address_red"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_pay_name" />

                        <com.example.myapplication.view.MytextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="55dp"
                            android:layout_marginTop="@dimen/dp_16"
                            android:layout_marginRight="32dp"
                            android:maxLines="2"
                            android:text='@{data.province+data.city+data.district+data.addr,default="--"}'
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/txt_size_11"
                            android:ellipsize="end"
                            app:layout_constraintLeft_toRightOf="@+id/iv_pay_weizhi"
                            app:layout_constraintTop_toBottomOf="@+id/tv_pay_name" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_12"
                            android:background="@color/transparent"
                            android:src="@mipmap/goods_enter"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <!--无地址数据显示-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cons_address2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="@drawable/bg_shadow"
                        android:visibility="gone"
                        app:clickview="@{(view)->click.enterMyAddress(view,1,datagood.useAddress,true)}">

                        <ImageView
                            android:id="@+id/iv_pay_weizhi2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_22"
                            android:contentDescription="TODO"
                            android:src="@mipmap/address_red"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.example.myapplication.view.MytextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="10dp"
                            android:maxLines="2"
                            android:text="请先添加地址"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/txt_size_15"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/ib_enter"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageButton
                            android:id="@+id/ib_enter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_12"
                            android:background="@color/transparent"
                            android:src="@mipmap/goods_enter"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <!--快递公司-->
                    <LinearLayout
                        android:id="@+id/ll_express_com"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_12"
                        android:visibility='@{datagood.usePostConfig?View.VISIBLE:View.GONE,default=visible}'
                        android:background="@drawable/bg_white_5radius">

                        <com.hpkj.sheplive.mvp.view.ExpressSelectView
                            android:id="@+id/express_view"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_weight="1"
                            android:paddingTop="10dp"
                            android:layout_marginBottom="9dp" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="运费："
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/txt_size_13"/>

                            <TextView
                                android:id="@+id/express_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text='@{jifenbean.dataPrice+"",default="--"}'
                                android:textColor="@color/color_FF4A4D"
                                android:textSize="@dimen/txt_size_12"
                                android:layout_marginRight="@dimen/dp_10"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/sp_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <!--订单数据-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_12"
                        android:paddingBottom="@dimen/dp_10"
                        android:background="@drawable/bg_white_5radius">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/shop_ico"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:layout_marginTop="@dimen/dp_12"
                            android:src="@drawable/app_icon"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:url='@{datashop.logo}' />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_shop_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="@dimen/dp_12"
                            android:text='@{datashop.shopName,default="--"}'
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/txt_size_14"
                            app:layout_constraintLeft_toRightOf="@+id/shop_ico"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/goods_img"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="@dimen/dp_8"
                            android:scaleType="fitXY"
                            android:src="@drawable/bg_empty"
                            app:imgmoren="@{@drawable/bg_empty}"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/shop_ico"
                            app:riv_corner_radius="3dp"
                            app:url="@{imgurl}" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/goods_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:layout_marginTop="@dimen/dp_8"
                            android:maxLength="13"
                            android:maxLines="2"
                            android:text='@{datagood.goodName,default="-"}'
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/txt_size_13"
                            app:layout_constraintLeft_toRightOf="@+id/goods_img"
                            app:layout_constraintTop_toBottomOf="@+id/shop_ico" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/goods_price1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_marginRight="13dp"
                            android:text='@{"¥"+datachange.beforeprice,default="¥0"}'
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/txt_size_12"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/shop_ico" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_num_good"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="13dp"
                            android:text='@{"X"+datachange.num,default="X1"}'
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/txt_size_11"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/goods_price1" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_skuname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="尺寸：100X100;"
                            android:textColor="@color/color_555555"
                            android:textSize="@dimen/txt_size_12"
                            app:layout_constraintLeft_toRightOf="@+id/goods_img"
                            app:layout_constraintTop_toBottomOf="@+id/goods_title" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_txt1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="24dp"
                            android:text="购买数量"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/txt_size_12"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/goods_img" />


                        <LinearLayout
                            android:id="@+id/ll_express_jifen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_txt1">

                            <!--配送方式-->
                            <LinearLayout
                                android:id="@+id/express_way_show"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_txt1"
                                android:visibility='@{datagood.usePostConfig?View.GONE:View.VISIBLE,default=visible}'>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_txt2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="@dimen/dp_15"
                                    android:text="配送方式"
                                    android:layout_weight="1"
                                    android:textColor="@color/color_333333"
                                    android:textSize="@dimen/txt_size_12" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_txt22"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_15"
                                    android:layout_marginRight="@dimen/dp_10"
                                    android:text='@{datagood.freight==0?"快递 免邮":"快递 "+datagood.freight+"元",default="快递 免邮"}'
                                    android:textColor="@color/color_555555"
                                    android:textSize="@dimen/txt_size_12" />
                            </LinearLayout>

                            <!--积分是否显示-->
                            <LinearLayout
                                android:id="@+id/jifen_show"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility='@{datagood.showShareAndCredit?View.VISIBLE:View.GONE,default=visible}'>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_txt4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="@dimen/dp_15"
                                    android:text="积分抵扣"
                                    android:layout_weight="1"
                                    android:textColor="@color/color_333333"
                                    android:textSize="@dimen/txt_size_12"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_txt2" />


                                <com.example.myapplication.view.MytextView
                                    android:id="@+id/jifen_checkbox"
                                    style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                                    android:layout_width="13dp"
                                    android:layout_height="13dp"
                                    android:layout_marginLeft="5.5dp"
                                    android:layout_marginTop="@dimen/dp_16"
                                    android:layout_marginRight="5.5dp"
                                    android:background='@{jifenbean.ischecked?@drawable/jifen_sel:@drawable/jifen_unsel,default=@drawable/jifen_sel}'
                                    app:clickview="@{(view)->activity.checkboxClick(view,jifenbean)}"
                                    app:layout_constraintRight_toLeftOf="@+id/tv_shiyong"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_txt2" />


                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_shiyong"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_15"
                                    android:text="使用"
                                    android:textColor="@color/color_FF4A4D"
                                    android:textSize="@dimen/txt_size_12"
                                    app:layout_constraintRight_toLeftOf="@+id/tv_jifen_value"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_txt2" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_jifen_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_15"
                                    android:text='@{jifenbean.creditDeduction+"",default="-"}'
                                    android:textColor="@color/color_FF4A4D"
                                    android:textSize="@dimen/txt_size_12"
                                    app:layout_constraintRight_toLeftOf="@+id/tv_jifendikou"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_txt2" />


                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_jifendikou"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_15"
                                    android:text="积分抵扣"
                                    android:textColor="@color/color_FF4A4D"
                                    android:textSize="@dimen/txt_size_12"
                                    app:layout_constraintRight_toLeftOf="@+id/tv_txt44"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_txt2" />


                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_txt44"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_15"
                                    android:layout_marginRight="10dp"
                                    android:text='@{jifenbean.deductionPrice+"元",default="-"}'
                                    android:textColor="@color/color_FF4A4D"
                                    android:textSize="@dimen/txt_size_12"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_txt2" />


                            </LinearLayout>


                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_txt5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_15"
                            android:text="订单备注"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/txt_size_12"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/ll_express_jifen" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/tv_txt55"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tv_txt5"
                            android:ellipsize="end"
                            android:layout_marginRight="@dimen/dp_10"
                            app:layout_constraintLeft_toRightOf="@+id/tv_txt5"
                            android:layout_marginLeft="@dimen/dp_60"
                            app:layout_constraintRight_toRightOf="parent"
                            android:background="@null"
                            android:hint="选填，请先与商家协商一致"
                            android:gravity="right"
                            android:textColor="@color/color_555555"
                            android:textSize="@dimen/txt_size_12"
                            android:singleLine="true" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_txt6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:layout_marginRight="@dimen/dp_12"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:text="总计："
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_size_12"
                            app:layout_constraintTop_toBottomOf="@+id/tv_txt5"
                            app:layout_constraintRight_toLeftOf="@+id/all_price" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/all_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:text='@{"¥"+click.pricesum(datachange.num,datachange.beforeprice),default=""}'
                            android:textColor="@color/color_EE2633"
                            android:textSize="@dimen/txt_size_12"
                            app:layout_constraintTop_toBottomOf="@+id/tv_txt5"
                            app:layout_constraintRight_toRightOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:text='@{"共"+datachange.num+"件",default="共1件"}'
                            android:textColor="@color/color_555555"
                            android:textSize="@dimen/txt_size_12"
                            app:layout_constraintTop_toBottomOf="@+id/tv_txt5"
                            app:layout_constraintRight_toLeftOf="@+id/tv_txt6" />


                        <LinearLayout
                            android:id="@+id/view_number"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginRight="@dimen/dp_10"
                            android:background="@drawable/shape_cart_item_add_cut_border"
                            android:divider="@drawable/shape_divider_1_v"
                            android:orientation="horizontal"
                            android:showDividers="middle"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/goods_img">

                            <com.example.myapplication.view.MytextView
                                android:id="@+id/tv_reduce"
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="-"
                                android:textColor="@color/color_676767"
                                android:textSize="@dimen/txt_size_13"
                                app:clickview="@{(view)->activity.onClick(view,datachange)}" />

                            <com.example.myapplication.view.MytextView
                                android:id="@+id/tv_num"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:minWidth="30dp"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:singleLine="true"
                                android:text='@{datachange.num+"",default="1"}'
                                android:textColor="@color/color_676767"
                                android:textSize="@dimen/txt_size_13" />

                            <com.example.myapplication.view.MytextView
                                android:id="@+id/tv_add"
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="+"
                                android:textColor="@color/color_676767"
                                android:textSize="@dimen/txt_size_13"
