<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.SpBean" />

        <!--当前登录用户返佣比例-->
        <variable
            name="yjbl"
            type="Float" />

        <import type="android.text.Html" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/homefx_frame_10radius"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        app:clickview='@{(view)->click.showGoodsDetail(view,data.item_id)}'>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_img"
            android:layout_width="107dp"
            android:layout_height="107dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_empty"
            app:imgmoren="@{@drawable/bg_empty}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="@dimen/dp_5"
            app:url="@{data.pict_url}" />


        <com.example.myapplication.view.MytextView
            android:id="@+id/tv_gooods_type"
            android:layout_width="30dp"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/bg_red_7radius"
            android:gravity="center"
            android:padding="1dp"
            android:layout_marginTop="2dp"
            android:text='@{data.user_type==1?"天猫":"淘宝",default="天猫"}'
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_11"
            app:layout_constraintLeft_toRightOf="@+id/item_img"
            app:layout_constraintTop_toTopOf="@+id/item_img" />

        <com.example.myapplication.view.MytextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text='@{data.title==null?"":Html.fromHtml(String.format(@string/item_kx_stock,data.title)),default="          -"}'
            android:textColor="@color/color_010101"
            android:textSize="@dimen/txt_size_14"
            app:layout_constraintLeft_toLeftOf="@+id/tv_gooods_type"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_img" />

        <LinearLayout
            android:id="@+id/item_q_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/new_conpoun"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:visibility="@{click.couponshow(data)?View.VISIBLE:View.GONE,default=visible}"
            app:layout_constraintLeft_toRightOf="@+id/item_img"
            app:layout_constraintTop_toBottomOf="@+id/tv_title">

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="券"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_12" />

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="¥"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_11" />

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text='@{click.couponamount(data)}'
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_13"
                tools:text="0.00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/bg_coupon_pink"
            android:gravity="bottom"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            app:layout_constraintLeft_toRightOf="@+id/item_q_linear"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            tools:ignore="MissingConstraints">

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享赚"
                android:textColor="@color/color_FF4A4D"
                android:textSize="@dimen/txt_size_12" />

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="¥"
                android:textColor="@color/color_FF4A4D"
                android:textSize="@dimen/txt_size_11" />

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{click.spbonus(data,yjbl)}'
                android:textColor="@color/color_FF4A4D"
                android:textSize="@dimen/txt_size_13"
                tools:text="0.00" />
        </LinearLayout>

        <com.example.myapplication.view.MytextView
            android:id="@id/txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:text="¥"
            android:textColor="@color/color_FF4A4D"
            android:textSize="@dimen/txt_size_11"
            app:layout_constraintBottom_toBottomOf="@+id/item_img"
            app:layout_constraintLeft_toRightOf="@+id/item_img" />

        <com.example.myapplication.view.MytextView
            android:id="@id/txt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{click.spqhj(data)}'
            android:textColor="@color/color_FF4A4D"
            android:textSize="@dimen/txt_size_16"
            app:layout_constraintBaseline_toBaselineOf="@id/txt_1"
            app:layout_constraintLeft_toRightOf="@id/txt_1"
            tools:text="0.00" />

        <com.example.myapplication.view.MytextView
            android:id="@id/txt_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="8dp"
            android:text="¥"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/txt_size_11"
            app:layout_constraintBaseline_toBaselineOf="@id/txt_1"
            app:layout_constraintLeft_toRightOf="@id/txt_2" />

        <com.example.myapplication.view.MytextView
            android:id="@id/txt_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{data.zk_final_price==null?"¥-.--":click.orgprice(data)+" "}'
            android:textColor="@color/color_999999"
            android:textSize="@dimen/txt_size_11"
            app:layout_constraintBaseline_toBaselineOf="@id/txt_1"
            app:layout_constraintLeft_toRightOf="@id/txt_3"
            tools:text="0.00" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/color_999999"
            app:layout_constraintBottom_toBottomOf="@id/txt_4"
            app:layout_constraintLeft_toLeftOf="@id/txt_3"
            app:layout_constraintRight_toRightOf="@id/txt_4"
            app:layout_constraintTop_toTopOf="@id/txt_4"
            tools:ignore="MissingConstraints,NotSibling" />

        <com.example.myapplication.view.MytextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="36dp"
            android:text='@{click.spvolume(data,1)}'
            android:textColor="@color/color_666666"
            android:textSize="@dimen/txt_size_9"
            android:visibility="visible"
            app:layout_constraintLeft_toRightOf="@+id/item_img"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            tools:ignore="MissingConstraints"
            tools:text="--人已买" />


        <com.example.myapplication.view.MytextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:background="@mipmap/home_fx_btn"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>