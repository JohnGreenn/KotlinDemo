<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="je"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F9F9F9"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/sy_bg">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@id/img_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/status_bar_height"
                android:padding="10dp"
                android:src="@drawable/ico_left"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/status_bar_height"
                android:paddingTop="8dp"
                android:text="提现记录"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_17"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.example.myapplication.view.MytextView
                android:id="@id/txt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@color/color_FDFF73"
                android:textSize="@dimen/txt_size_12"
                app:layout_constraintBaseline_toBaselineOf="@id/txt_2"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/txt_2"
                tools:ignore="MissingConstraints" />

            <com.example.myapplication.view.MytextView
                android:id="@id/txt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{je,default="0.00"}'
                android:textColor="@color/color_FDFF73"
                android:textSize="@dimen/txt_size_23"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/txt_1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="累计提现（元）"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_20"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_2"
                tools:ignore="MissingConstraints" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.github.jdsjlzx.recyclerview.LRecyclerView
            android:id="@+id/ll_cashrecord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-15dp" />

        <include
            android:id="@+id/empty_view"
            layout="@layout/no_cash_record"
            android:visibility="gone" />

    </LinearLayout>
</layout>