<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.hpkj.sheplive.fragment.LuoDiFragment" />

        <variable
            name="px"
            type="Integer" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/home_banner"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@null"
                app:image_scale_type="fit_xy"
                app:layout_collapseMode="parallax"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--            app:indicatorBgResId="@mipmap/half_circle"-->
            <!--            app:indicatorHeight="20dp"-->
            <!--            app:indicatorWidth="30dp"-->
            <com.hpkj.sheplive.widget.ImgTabLayout
                android:id="@+id/tablayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="@dimen/dp_3"
                android:paddingRight="@dimen/dp_3"
                app:indicatorHeight="0dp"
                app:innerLeftMargin="@dimen/dp_5"
                app:innerRightMargin="@dimen/dp_5"
                app:mTextBgDefResId="@drawable/bg_facccc"
                app:mTextBgSelectResId="@drawable/bg_ff4a4d"
                app:mTextColorDef="@color/white"
                app:mTextColorSelect="@color/white"
                app:mTextpaddingbottom="@dimen/dp_3"
                app:mTextpaddingleft="@dimen/dp_6"
                app:mTextpaddingright="@dimen/dp_6"
                app:mTextpaddingtop="@dimen/dp_3"
                app:textSize="@dimen/txt_size_12" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp">

            <com.example.myapplication.view.MytextView
                android:id="@id/txt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="默认"
                android:textColor="#FF6E70"
                android:textSize="@dimen/txt_size_14"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <View
                android:layout_width="18dp"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:background="#FF6E70"
                app:layout_constraintLeft_toLeftOf="@id/txt_1"
                app:layout_constraintRight_toRightOf="@id/txt_1"
                app:layout_constraintTop_toBottomOf="@id/txt_1" />

            <com.example.myapplication.view.MytextView
                android:id="@id/txt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:drawableRight="@{px==1?@drawable/px_s_ico:@drawable/px_x_ico,default=@drawable/px_x_ico}"
                android:drawablePadding="4dp"
                android:text="人气"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/txt_size_13"
                app:layout_constraintBottom_toBottomOf="@id/txt_1"
                app:layout_constraintLeft_toRightOf="@id/txt_1"
                app:layout_constraintTop_toTopOf="@id/txt_1" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>