<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activity"
            type="com.hpkj.sheplive.activity.CartActivity" />

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />

        <variable
            name="positon"
            type="Integer" />

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.CartListBean.ListBean" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:foreground="?android:selectableItemBackground"
        android:longClickable="true"
        android:paddingLeft="5dp"
        android:paddingTop="15dp"
        android:paddingRight="5dp"
        android:paddingBottom="15dp">

        <com.example.myapplication.view.MytextView
            android:id="@+id/tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:ellipsize="end"
            android:lines="2"
            android:maxLines="2"
            android:minLines="2"
            android:text='@{data.title??"",default="--"}'
            android:textColor="@color/color_222222"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/draw_goods"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.myapplication.view.MytextView
            android:id="@+id/tv_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="[现货]"
            android:textColor="@color/color_aaaaaa"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/draw_goods"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv" />

        <com.example.myapplication.view.MytextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="7dp"
            android:text='@{data.price+""}'
            android:textColor="@color/color_d81e07"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/draw_goods"
            app:layout_constraintTop_toBottomOf="@+id/tv_type" />


        <LinearLayout
            android:id="@+id/view_number"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:background="@drawable/shape_cart_item_add_cut_border"
            android:divider="@drawable/shape_divider_1_v"
            android:orientation="horizontal"
            android:showDividers="middle"
            app:layout_constraintBottom_toBottomOf="@id/tv_price"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_price">

            <com.example.myapplication.view.MytextView
                android:id="@+id/tv_reduce"
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/color_676767"
                android:textSize="15sp"
                app:clickview="@{(view)->activity.onClick(view,data)}" />

            <com.example.myapplication.view.MytextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:minWidth="40dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:singleLine="true"
                android:text='@{data.num+"",default="1"}'
                android:textColor="@color/color_676767"
                android:textSize="15sp" />


            <com.example.myapplication.view.MytextView
                android:id="@+id/tv_add"
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/color_676767"
                android:textSize="15sp"
                app:clickview="@{(view)->activity.onClick(view,data)}" />
        </LinearLayout>

        <ImageView
            android:id="@+id/draw_goods"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bg_empty"
            app:layout_constraintBottom_toBottomOf="@+id/view_number"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toRightOf="@+id/checkbox"
            app:layout_constraintTop_toTopOf="@+id/tv"
            android:contentDescription="TODO" />

        <com.example.myapplication.view.MytextView
            android:id="@+id/checkbox"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@{data.ischecked?@drawable/xuanzhong:@drawable/weixuanz,default=@drawable/weixuanz}"
            app:clickview="@{(view)->activity.onClick(view,data)}"
            app:layout_constraintBottom_toBottomOf="@id/draw_goods"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/draw_goods" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>