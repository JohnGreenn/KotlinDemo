<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


        <import type="android.view.View" />

        <variable
            name="activity"
            type="com.hpkj.sheplive.activity.ShopGoodsDetailActivity" />

        <variable
            name="img"
            type="String" />

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.ShopGoodsDetailBean.BaseInfoBean" />

        <variable
            name="dataall"
            type="com.hpkj.sheplive.entity.ShopGoodsDetailBean" />

        <variable
            name="datacomment"
            type="com.hpkj.sheplive.entity.ShopGoodsDetailBean.CommentBean" />

        <variable
            name="datashop"
            type="com.hpkj.sheplive.entity.ShopGoodsDetailBean.ShopInfoBean" />

        <variable
            name="datajf"
            type="com.hpkj.sheplive.entity.ShopGoodsDetailBean.CreditDeductionInfoBean" />

        <import type="java.util.ArrayList" />

        <import type="com.hpkj.sheplive.entity.SpecificationsListBean" />

        <variable
            name="orderlist"
            type="ArrayList&lt;SpecificationsListBean>" />

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />

        <variable
            name="xz"
            type="com.hpkj.sheplive.entity.TbEntity" />

        <variable
            name="bannersize"
            type="Integer" />

        <variable
            name="slotimg"
            type="String" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_40">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewpage_banner"
                        android:layout_width="match_parent"
                        android:layout_height="375dp"
                        android:focusable="false"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="-1dp" />

                    <com.hpkj.sheplive.widget.BannerIndicatorView
                        android:id="@+id/indicator_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:visibility='@{dataall.imageList.size()==1?View.INVISIBLE:View.VISIBLE,default="visible"}'
                        app:app_cell_count='4'
                        app:app_cell_margin="10dp"
                        app:app_cell_radius="4dp"
                        app:app_current_position="0"
                        app:app_indicator_style="CIRCLE"
                        app:app_normal_color="@color/white"
                        app:app_selected_color="@color/color_ff3d40"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--top-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="14dp"
                            android:text="¥"
                            android:textColor="@color/color_ff3d40"
                            android:textSize="@dimen/txt_size_15" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_6"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_toRightOf="@+id/txt10"
                            android:text='@{click.scfinalprice(dataall),default="-"}'
                            android:textColor="@color/color_ff3d40"
                            android:textSize="24sp" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_yuanjia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/txt11"
                            android:layout_marginLeft="@dimen/dp_6"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_toRightOf="@+id/txt11"
                            android:text='@{"¥"+data.price+"",default="0.0"}'
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/txt_size_12" />

                        <com.example.myapplication.view.MytextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/txt10"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:text='@{"已售"+click.numFormat2(data.getShowSalesVolumeL),default="已售-万"}'
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/txt_size_11" />

                        <!--积分分享赚显示-->
                        <LinearLayout
                            android:id="@+id/ll_show_new"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt10"
                            android:orientation="horizontal"
                            android:visibility='@{data.showShareAndCredit?View.VISIBLE:View.GONE,default=visible}'>

                            <!--积分-->
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_15"
                                android:background="@drawable/bg_red_2radius"
                                android:padding="@dimen/dp_5"
                                android:text='@{null==data.creditPrice?"积分抵¥0.00":"积分抵¥"+data.creditPrice,default="积分抵¥0.00"}'
                                android:textColor="@color/color_ccffffff"
                                android:textSize="@dimen/txt_size_11" />
                            <!--分享赚-->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txt10"
                                android:layout_marginLeft="11dp"
                                android:layout_marginTop="15dp"
                                android:layout_toRightOf="@+id/txt3"
                                android:background="@drawable/bg_coupon_pink"
                                android:gravity="center_vertical"
                                android:paddingLeft="6dp"
                                android:paddingTop="6dp"
                                android:paddingRight="6dp"
                                android:paddingBottom="6dp">

                                <com.example.myapplication.view.MytextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="分享赚¥"
                                    android:textColor="@color/color_CCFF4A4D"
                                    android:textSize="@dimen/txt_size_10" />

                                <com.example.myapplication.view.MytextView
                                    android:id="@+id/tv_share_get"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text='@{data.sharePrice+"",default="0.00"}'
                                    android:textColor="@color/color_CCFF4A4D"
                                    android:textSize="@dimen/txt_size_10" />
                            </LinearLayout>

                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_titile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ll_show_new"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_12"
                            android:layout_marginBottom="@dimen/dp_12"
                            android:maxLines="2"
                            android:minLines="2"
                            android:text='@{data.goodName,default="--"}'
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/txt_size_16" />

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/shop_slot_img"
                            android:layout_width="match_parent"
                            android:layout_height="103dp"
                            android:layout_below="@+id/tv_titile"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_marginBottom="12dp"
                            android:scaleType="fitXY"
                            app:riv_corner_radius="@dimen/dp_10"
                            app:url="@{slotimg}" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_f2f2f2"
                        android:orientation="vertical">

                        <!--积分信息-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@color/white"
                            android:visibility='@{data.showShareAndCredit?View.VISIBLE:View.GONE,default=visible}'>


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:text="当前积分"
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/txt_size_12" />


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:layout_toRightOf="@+id/txt4"
                                android:text='@{datajf.credit+"分",default="-"}'
                                android:textColor="@color/color_FF4A4D"
                                android:textSize="@dimen/txt_size_12" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_15"
                                    android:text="可用积分"
                                    android:textColor="@color/color_333333"
                                    android:textSize="@dimen/txt_size_12" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_8"
                                    android:layout_toRightOf="@+id/txt4"
                                    android:text='@{datajf.availableCredit+"分",default="-"}'
                                    android:textColor="@color/color_FF4A4D"
                                    android:textSize="@dimen/txt_size_12" />

                            </LinearLayout>


                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp_10"
                                android:layout_toLeftOf="@+id/txt6"
                                android:text="现金抵"
                                android:textColor="@color/color_FF4A4D"
                                android:textSize="@dimen/txt_size_12" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp_16"
                                android:text='@{datajf.deductionAmount+"元",default="-"}'
                                android:textColor="@color/color_FF4A4D"
                                android:textSize="@dimen/txt_size_12" />
                        </RelativeLayout>

                        <!--尺码-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@color/white"
                            android:visibility="@{orderlist==null||orderlist.size()==0?View.GONE:View.VISIBLE,default=visible}">

                            <com.example.myapplication.view.MytextView
                                android:id="@+id/txt_xuanze"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:gravity="center_vertical"
                                android:text="选择"
                                android:textColor="@color/color_999999"
                                android:textSize="@dimen/txt_size_13" />

                            <com.example.myapplication.view.MytextView
                                android:id="@+id/detals_xz"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="16dp"
                                android:layout_toRightOf="@+id/txt_xuanze"
                                android:drawableRight="@mipmap/goods_enter"
                                android:gravity="center_vertical"
                                android:paddingRight="15dp"
                                android:text='@{xz.tbtxt??"请选择尺码",default="请选择尺码"}'
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/txt_size_13"
                                app:clickview="@{(view)->activity.onClick(view)}" />

                        </RelativeLayout>

                        <!--邮费-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@color/white"
                            android:visibility='@{data.usePostConfig?View.GONE:View.VISIBLE,default=visible}'>

                            <com.example.myapplication.view.MytextView
                                android:id="@+id/txt_postprice"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:gravity="center_vertical"
                                android:text="配送费"
                                android:textColor="@color/color_999999"
                                android:textSize="@dimen/txt_size_13" />

                            <com.example.myapplication.view.MytextView
                                android:id="@+id/tv_post_value"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:layout_toRightOf="@+id/txt_postprice"
                                android:gravity="center_vertical"
                                android:text='@{data.freight==0?"包邮":"¥"+data.freight,default="包邮"}'
                                android:textColor="@color/color_FF4A4D"
                                android:textSize="@dimen/txt_size_13"
                                app:clickview="@{(view)->activity.onClick(view)}" />

                        </RelativeLayout>

                        <!--正品保障-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginRight="@dimen/dp_20">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="正品"
                                    android:textColor="#D81F08"
                                    android:textSize="@dimen/txt_size_13" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="保障"
                                    android:textColor="@color/color_343434"
                                    android:textSize="@dimen/txt_size_13" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_60"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginRight="@dimen/dp_10"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <com.github.jdsjlzx.recyclerview.LRecyclerView
                                    android:id="@+id/lr_taglist"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:layout_marginBottom="@dimen/dp_5" />

                            </LinearLayout>

                        </LinearLayout>

                        <!--店铺-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="63dp"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@mipmap/bg_shop"
                            app:clickview='@{(view)->click.enterShopSub(view,datashop.shopId,datashop.shopName,datashop.mallId)}'>

                            <ImageView
                                android:id="@+id/iv_shopicon2"
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:src="@drawable/app_icon" />

                            <com.example.myapplication.view.MytextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="12.5dp"
                                android:layout_toRightOf="@+id/iv_shopicon2"
                                android:text='@{datashop.shopName,default="--"}'
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/txt_size_12" />

                            <com.example.myapplication.view.MytextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp_15"
                                android:background="@mipmap/zp_auth"
                                android:gravity="center"
                                app:clickview='@{(view)->click.enterZbAuth(view,datashop.authFile)}' />

                            <com.example.myapplication.view.MytextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="@dimen/dp_12"
                                android:layout_toRightOf="@+id/iv_shopicon2"
                                android:text="本店不支持线上开发票，需要发票请联系客服"
                                android:textSize="@dimen/txt_size_9" />

                        </RelativeLayout>

                        <!-- 评价-->
                        <LinearLayout
                            android:id="@+id/ll_comments"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="110dp"
                                app:clickview='@{(view)->click.toShopComments(view,data.id)}'>

                                <com.example.myapplication.view.MytextView
                                    android:id="@+id/txt_pingjia"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="15dp"
                                    android:drawableLeft="@mipmap/red_rectangle"
                                    android:drawablePadding="6dp"
                                    android:text='@{"宝贝评价("+dataall.commentTotal+")"}'
                                    android:textColor="@color/color_333333" />

                                <com.example.myapplication.view.MytextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="@dimen/dp_15"
                                    android:drawableRight="@mipmap/enter_red"
                                    android:drawablePadding="@dimen/dp_10"
                                    android:text="查看全部"
                                    android:textColor="@color/color_FF4A4D"
                                    android:textSize="@dimen/sp_12" />

                                <com.makeramen.roundedimageview.RoundedImageView
                                    android:id="@+id/rimg_tou"
                                    url='@{datacomment.headImg}'
                                    android:layout_width="@dimen/dp_20"
                                    android:layout_height="@dimen/dp_20"
                                    android:layout_below="@+id/txt_pingjia"
                                    android:layout_marginLeft="@dimen/dp_15"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/bg_empty"
                                    app:imgmoren="@{@drawable/bg_empty}"
                                    app:riv_oval="true" />

                                <com.example.myapplication.view.MytextView
                                    android:id="@+id/txt_user"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txt_pingjia"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:layout_marginTop="@dimen/dp_12"
                                    android:layout_toRightOf="@+id/rimg_tou"
                                    android:text='@{datacomment.createUser,default="--"}'
                                    android:textColor="@color/color_999999"
                                    android:textSize="@dimen/txt_size_12" />

                                <com.example.myapplication.view.MytextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/rimg_tou"
                                    android:layout_marginLeft="@dimen/dp_15"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginRight="@dimen/dp_15"
                                    android:ellipsize="end"
                                    android:maxLines="2"
                                    android:text='@{datacomment.commentText,default="--"}'
                                    android:textColor="@color/color_333333"
                                    android:textSize="@dimen/txt_size_13" />

                            </RelativeLayout>

                            <View
                                style="@style/new_line"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_10" />

                        </LinearLayout>

                        <!-- 宝贝详情文字-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@color/white">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="42dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:drawableLeft="@mipmap/red_rectangle"
                                android:drawablePadding="@dimen/dp_6"
                                android:gravity="center"
                                android:text="宝贝详情"
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/txt_size_13" />

                            <com.example.myapplication.view.MytextView
                                android:id="@+id/tv_foldable"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:drawableLeft="@mipmap/ic_arrow_up"
                                android:drawablePadding="@dimen/dp_4"
                                android:padding="@dimen/dp_10"
                                android:text="收起"
                                app:clickview="@{(view)->activity.onClick(view)}" />
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>


                <!-- 宝贝详情具体图片-->
                <LinearLayout
                    android:id="@+id/ll_webview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--                    <LinearLayout-->
                    <!--                        android:id="@+id/pic_linear"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:orientation="vertical"/>-->

                    <!--                    <com.example.myapplication.view.LollipopFixedWebView-->
                    <!--                        android:id="@+id/goodspic_webview"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:paddingBottom="6dp"-->
                    <!--                        android:visibility="gone"-->
                    <!--                        android:background="@color/white"-->
                    <!--                        android:scrollbars="none" />-->
                    <com.tencent.smtt.sdk.WebView
                        android:id="@+id/tc_webview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_70">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已全部加载完"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/txt_size_15"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <!-- 标题-->
        <com.hjq.bar.TitleBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_top_height"
            android:background="@color/transparent"
            app:lineVisible="false"
            app:title="宝贝购买信息"
            app:titleColor="@color/transparent" />

        <!-- 底部-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentBottom="true"
            android:background="@color/white">

            <com.example.myapplication.view.MytextView
                android:id="@+id/btn_shop_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btn_shop_buy"
                android:background='@{datashop.mallId==1?@drawable/bg_add_to_gwc:@drawable/bg_add_gwc_grey,default=@drawable/bg_add_to_gwc}'
                android:gravity="center"
                android:text="立即分享"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_15"
                app:clickview="@{(view)->activity.onClick(view)}" />

            <com.example.myapplication.view.MytextView
                android:id="@+id/btn_shop_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/bg_buy"
                android:gravity="center"
                android:text="立即购买"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_15"
                app:clickview="@{(view)->activity.onClick(view)}" />
        </RelativeLayout>

    </RelativeLayout>
</layout>