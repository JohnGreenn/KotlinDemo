<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.SYBean" />

        <variable
            name="data2"
            type="com.hpkj.sheplive.entity.SYBean.ProfitBean" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_f2f2f2">

        <com.hjq.bar.TitleBar
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_top_height"
            app:title="收益"
            app:titleSize="@dimen/txt_size_18"
            app:titleColor="@color/white"
            app:backButton="false"
            app:lineVisible="false"
            android:background="@color/color_e0b777" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:background="@color/color_e0b777"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="100dp"
                android:background="@drawable/sy_frame_top">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/sy_img"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    app:riv_oval="true"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/bg_empty"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="15dp" />

                <com.example.myapplication.view.MytextView
                    android:id="@+id/tv_sy_zhubo"
                    android:layout_width="32dp"
                    android:layout_height="15dp"
                    android:background="@drawable/btn_sy_zhubo"
                    android:text="主播"
                    android:textSize="9sp"
                    android:textColor="@color/color_8E733E"
                    android:gravity="center_horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginBottom="7dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@+id/sy_line1" />

                <com.example.myapplication.view.MytextView
                    android:id="@+id/sy_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{data.realname,default="--"}'
                    android:textSize="@dimen/txt_size_18"
                    android:textColor="@color/color_333333"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/sy_img"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_10" />

                <com.example.myapplication.view.MytextView
                    android:id="@+id/sy_hehuoren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{" "+data.levelname+" ",default="--"}'
                    android:textSize="9sp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/btn_sy_hehuoren"
                    app:layout_constraintLeft_toRightOf="@+id/sy_name"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/sy1"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_5" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/hehuoren"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/sy_name"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:contentDescription="TODO" />

                <com.example.myapplication.view.MytextView
                    android:id="@+id/sy_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{"邀请码："+data.invite_code}'
                    android:textColor="@color/color_888888"
                    app:layout_constraintLeft_toRightOf="@id/sy_img"
                    android:layout_marginLeft="@dimen/dp_10"
                    app:layout_constraintTop_toBottomOf="@+id/sy_name"
                    android:layout_marginTop="@dimen/dp_10" />

                <ImageView
                    android:id="@+id/iv_copyicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/fuzhi"
                    app:layout_constraintLeft_toRightOf="@id/sy_code"
                    android:layout_marginLeft="7dp"
                    app:layout_constraintTop_toBottomOf="@+id/sy_name"
                    android:layout_marginTop="@dimen/dp_10"
                    android:contentDescription="TODO" />

                <View
                    android:id="@+id/sy_line1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_f0f0f0"
                    app:layout_constraintTop_toBottomOf="@id/sy_img"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginTop="-40dp"
            android:background="@drawable/sy_frame_down"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <com.example.myapplication.view.MytextView
                    android:id="@+id/sy_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{data.recom_num+"人"}'
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_333333"
                    android:textSize="17sp" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="推荐客户"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_333333"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{"¥"+data2.total_revenue}'
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_333333"
                    android:textSize="17sp" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="总收益"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_333333"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{"¥"+data2.usable}'
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_333333"
                    android:textSize="17sp" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="可用余额"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_333333"
                    android:textSize="17sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/sy_frame_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_18"
                    android:text='@{"¥"+data2.transit}'
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_333333"
                    android:textSize="12sp" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="在途收益"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_333333"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_18"
                    android:text='@{"¥"+data2.today}'
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_333333"
                    android:textSize="12sp" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="今日收益"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_333333"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.example.myapplication.view.MytextView
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{"¥"+data2.last}'
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_333333"
                    android:textSize="12sp" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="上月提现"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_333333"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.example.myapplication.view.MytextView
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{"¥"+data2.tmonth}'
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_333333"
                    android:textSize="12sp" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="本月收益"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_333333"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/mysy_tablayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/sy_frame_top"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            app:tabIndicatorColor="@color/color_e0b777"
            app:tabIndicatorHeight="3dp"
            app:tabSelectedTextColor="@color/color_e0b777"
            app:tabTextColor="@color/color_333333" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_E4E4E4" />

        <androidx.viewpager.widget.ViewPager
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@color/white"
            android:id="@+id/sy_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>
</layout>