<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f2f2f2"
        android:orientation="vertical"
        tools:context=".activity.WithdrawalSuccessActivity">

        <com.hjq.bar.TitleBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_top_height"
            android:background="@color/color_FF4A4D"
            app:leftIcon="@drawable/ico_left"
            app:title="提现"
            app:titleColor="@color/white"
            app:titleSize="@dimen/txt_size_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_50"
            android:background="@color/color_fbf3e0"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.example.myapplication.view.MytextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:drawableLeft="@mipmap/hint"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical"
                android:text="金额将提现至您当前账户绑定的支付宝账号上，请注意查收"
                android:textColor="@color/color_fbf3e0" />

        </LinearLayout>

        <ImageView
            android:layout_width="111dp"
            android:layout_height="92dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d_50"
            android:src="@mipmap/paysuccess_2" />

        <com.example.myapplication.view.MytextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginRight="10dp"
            android:text="提现成功"
            android:textColor="@color/color_FF4A4D"
            android:textSize="@dimen/txt_size_14" />

        <LinearLayout
            android:layout_width="192dp"
            android:layout_height="192dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_14"
            android:background="@drawable/bg_shadow"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="34dp">

                <LinearLayout
                    android:id="@+id/ll_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    >

                    <com.example.myapplication.view.MytextView
                        android:id="@id/txt_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="¥"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_size_8"

                        tools:ignore="MissingConstraints" />
                    <com.example.myapplication.view.MytextView
                        android:id="@+id/tv_banlance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="-"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_size_14"
                        app:layout_constraintLeft_toRightOf="@id/txt_1"

                        tools:ignore="MissingConstraints" />
                </LinearLayout>




                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="当前余额"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_12"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll_money"
                    tools:ignore="MissingConstraints" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="left"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">


                    <com.example.myapplication.view.MytextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="提现账户"
                        android:textColor="@color/color_ff000000"
                        android:textSize="@dimen/txt_size_12" />

                    <com.example.myapplication.view.MytextView
                        android:id="@+id/tv_txaccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="-"
                        android:textColor="@color/color_333333" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <com.example.myapplication.view.MytextView
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:text="提现金额"
                        android:textColor="@color/color_ff000000"
                        android:textSize="@dimen/txt_size_12" />

                    <com.example.myapplication.view.MytextView
                        android:id="@+id/tv_txvalue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="-"
                        android:textColor="@color/color_333333" />

                </LinearLayout>
            </LinearLayout>

            <com.example.myapplication.view.MytextView
                android:id="@id/txt_2"
                android:layout_width="72dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:background="@drawable/bg_red_15radius"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_12" />

        </LinearLayout>


    </LinearLayout>
</layout>