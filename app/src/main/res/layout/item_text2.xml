<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.SimilarSkuListBean" />

        <variable
            name="data2"
            type="com.hpkj.sheplive.entity.PriceInfoBeanX" />

        <import type="android.view.View" />

        <variable
            name="positon"
            type="Integer" />

        <variable
            name="discount"
            type="Integer" />

        <variable
            name="linkurl"
            type="String" />

        <variable
            name="quanman"
            type="Double" />

        <variable
            name="jdyongjin"
            type="Double" />

        <variable
            name="quanhoujia"
            type="Double" />

        <!--优惠券信息-->
        <import type="java.util.ArrayList" />

        <import type="com.hpkj.sheplive.entity.CouponListBeanX" />

        <variable
            name="yhq"
            type="ArrayList&lt;CouponListBeanX>" />

        <import type="android.text.Html" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/bg_shadow"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_shop_goodspic"
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:layout_marginTop="2dp"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/bg_empty"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_corner_radius_top_left="@dimen/dp_10"
                app:riv_corner_radius_top_right="@dimen/dp_10"
                app:riv_mutate_background="true" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_live_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_shop_sale"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxEms="8"
                android:padding="8dp"
                android:singleLine="true"
                android:text='@{"月售"+data.inOrderCount30Days+"件",default="已售-件"}'
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sy_item_bg"
            android:paddingLeft="7dp"
            android:paddingTop="10dp"
            android:paddingRight="7dp"
            android:paddingBottom="6dp">

            <com.example.myapplication.view.MytextView
                android:id="@+id/tv_sp_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:maxLines="2"
                android:minLines="2"
                android:text='@{data.skuName==null?"":data.skuName,default="--"}'
                android:textColor="@color/color_333333"
                android:textSize="@dimen/txt_size_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.example.myapplication.view.MytextView
                android:id="@+id/item_price_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/color_d81e07"
                android:textSize="@dimen/txt_size_12"
                app:layout_constraintTop_toBottomOf="@+id/tv_sp_title"
                tools:ignore="MissingConstraints" />

            <com.example.myapplication.view.MytextView
                android:id="@+id/item_price_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:maxLines="2"
                android:text='@{"¥"+data2.price+"",default="¥0.00"}'
                android:textColor="@color/color_666666"
                android:textSize="@dimen/txt_size_10"
                app:layout_constraintBottom_toBottomOf="@id/item_price_1"
                app:layout_constraintLeft_toRightOf="@id/item_price_1"
                tools:ignore="MissingConstraints" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/bg_coupon"
                android:padding="2dp"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_10" />

            <LinearLayout
                android:id="@+id/ll_fenxiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_coupon_pink"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="分享赚"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/txt_size_10" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="¥0"
                    android:textColor="@color/color_d81e07"
                    android:textSize="@dimen/txt_size_10" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>