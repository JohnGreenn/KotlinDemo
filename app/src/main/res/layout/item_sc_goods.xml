<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.hpkj.sheplive.fragment.CategoryFragment" />

        <variable
            name="click"
            type="com.hpkj.sheplive.utils.ClickUtil" />

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.CateGoryBean.ChildTypeBean" />


        <import type="android.view.View" />

        <variable
            name="positon"
            type="Integer" />

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical"
        app:clickview='@{(view)->click.enterGoodsList(view,data.id,data.typeName,0)}'>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_live_user_pic"
            android:layout_width="55.5dp"
            android:layout_height="55.5dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            app:riv_corner_radius="360dp"
            android:src="@drawable/bg_empty"
            app:imgmoren="@{@drawable/bg_empty}"
            app:url="@{data.typePic}"/>


        <com.example.myapplication.view.MytextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text='@{data.typeName}'
            android:layout_gravity="center_horizontal"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/txt_size_14"
            android:singleLine="true"
            android:layout_marginBottom="@dimen/dp_10"
            tools:stext="标题"/>

    </LinearLayout>
</layout>