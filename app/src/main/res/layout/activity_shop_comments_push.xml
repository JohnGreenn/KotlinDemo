<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.ShopOrderListBean" />

        <variable
            name="data2"
            type="com.hpkj.sheplive.entity.ShopOrderListBean.OrderDetailBean" />

        <variable
            name="activity"
            type="com.hpkj.sheplive.activity.ShopCommentsPushActivity" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.ShopCommentsPushActivity">

        <com.hjq.bar.TitleBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_top_height"
            android:background="@color/color_FF4A4D"
            app:leftIcon="@mipmap/back_white"
            app:titleColor="@color/white"
            app:title="评论" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_img"
                url='@{data2.goodsImage}'
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:src="@drawable/bg_empty" />

            <com.example.myapplication.view.MytextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_toRightOf="@+id/iv_img"
                android:ellipsize="end"
                android:lines="1"
                android:text='@{data2.goodsName,default="--"}'
                android:textColor="@color/color_333333"
                android:textSize="@dimen/txt_size_13" />

            <com.example.myapplication.view.MytextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_title"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@+id/iv_img"
                android:text='@{data2.skuDesc,default="--"}'
                android:textColor="@color/color_555555"
                android:textSize="@dimen/txt_size_13" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="58dp"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toRightOf="@+id/iv_img"
                android:layout_alignBottom="@+id/iv_img"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_one"
                    style="@style/radiobtncommentnew"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_weight="1"
                    android:checked="true"
                    android:drawableLeft="@drawable/selector_comment_leftdrawable"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="好评" />

                <RadioButton
                    android:id="@+id/radio_two"
                    style="@style/radiobtncommentnew"
                    android:layout_width="@dimen/dp_100"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_weight="1"
                    android:height="@dimen/dp_40"
                    android:drawableLeft="@drawable/selector_comment_center"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="中评" />

                <RadioButton
                    android:id="@+id/radio_three"
                    style="@style/radiobtncommentnew"
                    android:layout_width="@dimen/dp_100"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="1"
                    android:height="@dimen/dp_40"
                    android:drawableLeft="@drawable/selector_comment_bad"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="差评" />

            </RadioGroup>


        </RelativeLayout>

        <View
            style="@style/new_line"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/et_comments_content"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:background="@null"
            android:gravity="top"
            android:hint="请输入你对宝贝的评价"
            android:padding="@dimen/dp_15"
            android:textColor="@color/color_333333"
            android:textColorHighlight="@color/color_B4DF87"
            android:textColorHint="@color/color_656565"
            android:textSize="@dimen/txt_size_15" />

        <View
            style="@style/new_line"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100">

            <com.example.myapplication.view.MytextView
                android:id="@+id/comment_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_18"
                android:text="描述相符"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/txt_size_13" />

            <per.wsj.library.AndRatingBar
                android:id="@+id/comment_star"
                android:layout_width="120dp"
                android:layout_height="@dimen/dp_18"
                android:maxWidth="@dimen/dp_18"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_toRightOf="@+id/comment_txt3"
                app:keepOriginColor="true"
                app:starDrawable="@drawable/red_star"
                app:bgDrawable="@drawable/grey_star"
                android:rating="5"
                android:numStars="5"
                android:stepSize="1.0"/>

            <com.example.myapplication.view.MytextView
                android:id="@+id/comment_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_18"
                android:text="物流服务"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/txt_size_13" />

            <per.wsj.library.AndRatingBar
                android:id="@+id/comment_sta2"
                android:layout_width="120dp"
                android:layout_height="@dimen/dp_18"
                android:maxWidth="@dimen/dp_18"
                android:layout_marginLeft="13dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/dp_18"
                android:layout_toRightOf="@+id/comment_txt3"
                app:keepOriginColor="true"
                app:starDrawable="@drawable/red_star"
                app:bgDrawable="@drawable/grey_star"
                android:rating="5"
                android:numStars="5"
                android:stepSize="1.0"/>

            <com.example.myapplication.view.MytextView
                android:id="@+id/comment_txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginBottom="@dimen/dp_18"
                android:text="服务态度"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/txt_size_13" />

            <per.wsj.library.AndRatingBar
                android:id="@+id/comment_sta3"
                android:layout_width="120dp"
                android:layout_height="@dimen/dp_18"
                android:maxWidth="@dimen/dp_18"
                android:layout_marginLeft="13dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_18"
                android:layout_toRightOf="@+id/comment_txt3"
                app:keepOriginColor="true"
                app:starDrawable="@drawable/red_star"
                app:bgDrawable="@drawable/grey_star"
                android:rating="5"
                android:numStars="5"
                android:stepSize="1.0"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_f2f2f2">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_comment_push"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentBottom="true"
                android:background="@color/color_FF4A4D"
                android:text="发布"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_15"
                app:clickview='@{(view)->activity.btnPushClick(view)}' />

        </RelativeLayout>


    </LinearLayout>
</layout>