<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.hpkj.sheplive.entity.SubSYBean" />

        <variable
            name="data2"
            type="com.hpkj.sheplive.entity.SubSYBean.GoodsBean" />

        <variable
            name="positon"
            type="Integer" />

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sy_frame_5">

        <LinearLayout
            android:id="@+id/ll_show1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/sysub_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sy4"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:contentDescription="TODO" />

                <com.example.myapplication.view.MytextView
                    android:id="@+id/txt_sy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/txt_size_16"
                    android:text="直推收益"
                    android:layout_toRightOf="@+id/sysub_img"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text='@{"+"+data.commissions,default=0}'
                    android:textSize="@dimen/txt_size_16"
                    android:textColor="@color/color_F46B14"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="@dimen/dp_8" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_subsy_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/sp_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.example.myapplication.view.MytextView
                        android:id="@+id/tv_sy_hjprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_fd4f00"
                        android:textSize="@dimen/txt_size_17"
                        android:layout_alignParentRight="true"
                        android:text="1176.00"
                        android:layout_marginRight="@dimen/dp_8" />

                    <com.example.myapplication.view.MytextView
                        android:id="@+id/tv_sysub_heji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="合计："
                        android:textSize="@dimen/txt_size_14"
                        android:textColor="@color/color_9A9A9A"
                        android:layout_toLeftOf="@+id/tv_sy_hjprice"
                        android:layout_marginTop="3dp" />

                    <com.example.myapplication.view.MytextView
                        android:id="@+id/tv_sysub_sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="件商品"
                        android:textSize="@dimen/txt_size_14"
                        android:textColor="@color/color_9A9A9A"
                        android:layout_toLeftOf="@+id/tv_sysub_heji"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="3dp" />

                    <com.example.myapplication.view.MytextView
                        android:id="@+id/tv_sysub_jian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="@dimen/txt_size_14"
                        android:textColor="@color/color_333333"
                        android:layout_toLeftOf="@+id/tv_sysub_sp"
                        android:layout_marginTop="3dp" />

                    <com.example.myapplication.view.MytextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共"
                        android:textSize="@dimen/txt_size_14"
                        android:textColor="@color/color_9A9A9A"
                        android:layout_toLeftOf="@+id/tv_sysub_jian"
                        android:layout_marginTop="3dp" />

                </RelativeLayout>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:visibility="visible">

                <View
                    android:id="@+id/tv_pay_txt2"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/color_f0f0f0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.example.myapplication.view.MytextView
                    android:id="@+id/tv_pay_txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="订单编号："
                    android:textColor="@color/color_7D7D7D"
                    android:textSize="@dimen/txt_size_13"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_pay_txt2" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text='@{data.ordersn,default="--"}'
                    android:textColor="@color/color_7D7D7D"
                    android:textSize="@dimen/txt_size_13"
                    app:layout_constraintLeft_toRightOf="@id/tv_pay_txt3"
                    app:layout_constraintTop_toBottomOf="@+id/tv_pay_txt2" />

                <com.example.myapplication.view.MytextView
                    android:id="@+id/tv_pay_txt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="成交时间："
                    android:textColor="@color/color_7D7D7D"
                    android:textSize="@dimen/txt_size_13"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_pay_txt3" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text='@{data.paytime,default="--"}'
                    android:textColor="@color/color_7D7D7D"
                    android:textSize="@dimen/txt_size_13"
                    app:layout_constraintLeft_toRightOf="@id/tv_pay_txt4"
                    app:layout_constraintTop_toBottomOf="@+id/tv_pay_txt3" />

                <com.example.myapplication.view.MytextView
                    android:id="@+id/tv_pay_txt5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text='@{data.nickname+"："}'
                    android:textColor="@color/color_7D7D7D"
                    android:textSize="@dimen/txt_size_13"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_pay_txt4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="@dimen/dp_15" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:maxLines="2"
                    android:text='@{data.mobile,default="--"}'
                    android:textColor="@color/color_7D7D7D"
                    android:textSize="@dimen/txt_size_13"
                    app:layout_constraintLeft_toRightOf="@id/tv_pay_txt5"
                    app:layout_constraintTop_toBottomOf="@+id/tv_pay_txt4" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_show2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/sysub_img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sy2"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:contentDescription="TODO" />

                <com.example.myapplication.view.MytextView
                    android:id="@+id/txt_sy2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/txt_size_16"
                    android:text="提现记录"
                    android:layout_toRightOf="@+id/sysub_img2"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text='@{"+"+data.realmoney,default=0}'
                    android:textSize="@dimen/txt_size_16"
                    android:textColor="@color/color_F46B14"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="@dimen/dp_8" />

            </RelativeLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:visibility="visible">

                <View
                    android:id="@+id/tv_pay_txt22"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/color_f0f0f0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.example.myapplication.view.MytextView
                    android:id="@+id/tv_pay_txt33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="提现时间："
                    android:textColor="@color/color_7D7D7D"
                    android:textSize="@dimen/txt_size_13"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_pay_txt22" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text='@{data.paytime,default="--"}'
                    android:textColor="@color/color_7D7D7D"
                    android:textSize="@dimen/txt_size_13"
                    app:layout_constraintLeft_toRightOf="@id/tv_pay_txt33"
                    app:layout_constraintTop_toBottomOf="@+id/tv_pay_txt22" />

                <com.example.myapplication.view.MytextView
                    android:id="@+id/tv_pay_txt44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="提现账号："
                    android:textColor="@color/color_7D7D7D"
                    android:textSize="@dimen/txt_size_13"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_pay_txt33"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="@dimen/dp_10" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text='@{data.bankname+"\n"+data.bankcard+"\n"+data.realname,default="--"}'
                    android:textColor="@color/color_7D7D7D"
                    android:textSize="@dimen/txt_size_13"
                    app:layout_constraintLeft_toRightOf="@id/tv_pay_txt44"
                    app:layout_constraintTop_toBottomOf="@+id/tv_pay_txt33"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="@dimen/dp_10" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>
</layout>