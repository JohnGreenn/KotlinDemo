<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="com.hpkj.sheplive.activity.PaySelectActivity" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.PaySelectActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.hjq.bar.TitleBar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_top_height"
                app:title="支付选择"
                app:titleColor="@color/color_333333"
                app:titleSize="@dimen/txt_size_16" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:clickview='@{(view)->activity.changePay(view,0)}'>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_wx"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:src="@mipmap/wxpay" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dp"
                    android:layout_toRightOf="@+id/iv_wx"
                    android:text="微信支付"
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/txt_size_14" />

                <ImageButton
                    android:id="@+id/ibt_vx"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/xuanzhong" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_ffdddddd" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:clickview='@{(view)->activity.changePay(view,1)}'>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_ali"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:src="@mipmap/alipay" />

                <com.example.myapplication.view.MytextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dp"
                    android:layout_toRightOf="@+id/iv_ali"
                    android:text="支付宝支付"
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/txt_size_14" />

                <ImageButton
                    android:id="@+id/ibt_zfb"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/weixuanz" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_ffdddddd" />

        </LinearLayout>

        <com.example.myapplication.view.MytextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_d81e07"
            android:gravity="center_vertical|center_horizontal"
            android:text="立即付款"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_16"
            app:clickview='@{(view)->activity.GotoPay(view)}' />

    </RelativeLayout>
</layout>